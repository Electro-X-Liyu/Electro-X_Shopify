{% schema %}
{
  "name": "Browse all products",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Browse all products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "uppercase_text",
      "label": "Uppercase text",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Browse all products",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .browse-all-products__link {
    display: inline-block;
    font-weight: 700;
    text-decoration: none;
    position: relative;
    padding-right: 20px;
    text-align: center;
    width: 100%;
  }
  
  .browse-all-products__link.uppercase {
    text-transform: uppercase;
  }
  
  .browse-all-products__link:after {
    content: 'â†’';
    position: absolute;
    right: 0;
    transition: transform 0.3s ease;
  }
  
  .browse-all-products__link:hover:after {
    transform: translateX(3px);
  }
  
  .browse-all-products__container {
    text-align: center;
    margin: 0 auto;
    max-width: 1200px;
    padding: 0 20px;
  }
{% endstyle %}

<div class="browse-all-products__container">
  <a href="{{ section.settings.button_link | default: '/collections/all' }}" 
     class="browse-all-products__link {% if section.settings.uppercase_text %}uppercase{% endif %}">
    {{ section.settings.button_text }}
  </a>
</div>