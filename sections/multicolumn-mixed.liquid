{% schema %}
{
  "name": "Mixed Multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "适应图片"
        },
        {
          "value": "square",
          "label": "正方形"
        }
      ],
      "default": "adapt",
      "label": "图片比例"
    }
  ],
  "blocks": [
    {
      "type": "single_image",
      "name": "单图列",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        }
      ]
    },
    {
      "type": "double_image",
      "name": "双图列",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "第一张图片"
        },
        {
          "type": "url",
          "id": "link_1",
          "label": "第一张图片链接"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "第二张图片"
        },
        {
          "type": "url",
          "id": "link_2",
          "label": "第二张图片链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mixed Multicolumn"
    }
  ]
}
{% endschema %}

<div class="page-width">
  <div class="mixed-column-container">
    {%- for block in section.blocks -%}
      {% case block.type %}
        {% when 'single_image' %}
          <div class="column single-image-column">
            {% if block.settings.image %}
              <a href="{{ block.settings.link }}" class="image-link">
                {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'mixed-column-image' }}
              </a>
            {% endif %}
          </div>
        {% when 'double_image' %}
          <div class="column double-image-column">
            <div class="double-image-wrapper">
              {% if block.settings.image_1 %}
                <a href="{{ block.settings.link_1 }}" class="image-link">
                  {{ block.settings.image_1 | image_url: width: 400 | image_tag: loading: 'lazy', class: 'mixed-column-image' }}
                </a>
              {% endif %}
              {% if block.settings.image_2 %}
                <a href="{{ block.settings.link_2 }}" class="image-link">
                  {{ block.settings.image_2 | image_url: width: 400 | image_tag: loading: 'lazy', class: 'mixed-column-image' }}
                </a>
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {%- endfor -%}
  </div>
</div>

<style>
.mixed-column-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.5rem;
  width: 100%;
}

.column {
  width: 100%;
}

.double-image-wrapper {
  display: flex;
  gap: 0.5rem;
}

.image-link {
  display: block;
  width: 100%;
}

.mixed-column-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}

@media screen and (max-width: 749px) {
  .mixed-column-container {
    grid-template-columns: 1fr;
  }
  
  .double-image-wrapper {
    flex-direction: column;
  }
}
</style>