{%- style -%}
  /* 基础样式保持不变 */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    
    /* 统一卡片尺寸控制 */
    .product-collection.card-size-small .card-wrapper {
      width: 240px;
    }
    .product-collection.card-size-medium .card-wrapper {
      width: 300px;
    }
    .product-collection.card-size-large .card-wrapper {
      width: 360px;
    }
    .product-collection.card-size-xlarge .card-wrapper {
      width: 420px;
    }
  }

  /* 确保卡片布局一致性 */
  .product-collection .grid__item {
    display: flex;
    justify-content: center;
    padding-bottom: 20px; /* 统一间距 */
  }
  
  .product-collection .card-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    width: 100%; /* 移动端满宽 */
  }
  
  .product-collection .card {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    height: 100%; /* 确保高度一致 */
  }
  
  .product-collection .card__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 16px; /* 统一内边距 */
  }
  
  /* 图片比例统一 */
  .product-collection .card__media {
    aspect-ratio: 1/1; /* 强制正方形比例 */
    overflow: hidden;
  }
  
  /* 移动端调整 */
  @media screen and (max-width: 749px) {
    .product-collection .card-wrapper {
      max-width: 100%;
    }
    
    .product-collection .grid__item {
      padding-bottom: 10px;
    }
  }
{%- endstyle -%}