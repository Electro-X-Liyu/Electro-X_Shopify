{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 基础卡片样式 */
  .product-collection .card-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-collection .card {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }

  /* 自适应图片容器 - 关键部分 */
  .product-collection .card__media {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .product-collection .card__media::before {
    content: '';
    display: block;
    padding-bottom: var(--media-padding-bottom, 100%);
  }

  .product-collection .card__media img,
  .product-collection .card__media .media img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }

  /* 卡片内容区域 */
  .product-collection .card__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1rem;
  }

  /* 卡片内边距调整 */
  .product-collection .card__information {
    padding-top: 0.5rem;
  }

  /* PC端卡片尺寸控制 */
  @media screen and (min-width: 750px) {
    .product-collection.card-size-small .card-wrapper {
      width: 240px;
      --media-padding-bottom: 120%; /* 可根据需要调整比例 */
    }
    .product-collection.card-size-medium .card-wrapper {
      width: 300px;
      --media-padding-bottom: 120%;
    }
    .product-collection.card-size-large .card-wrapper {
      width: 360px;
      --media-padding-bottom: 120%;
    }
    .product-collection.card-size-xlarge .card-wrapper {
      width: 420px;
      --media-padding-bottom: 120%;
    }

    /* 确保产品网格水平居中 */
    .product-collection .product-grid {
      justify-content: center;
      gap: 1.5rem;
    }
  }

  /* 移动端响应式调整 */
  @media screen and (max-width: 749px) {
    .product-collection .grid__item {
      padding: 0.5rem;
    }
    
    .product-collection .card-wrapper {
      max-width: 100%;
      --media-padding-bottom: 100%;
    }
    
    .product-collection .product-grid {
      gap: 0.75rem;
    }
  }

  /* 垂直居中所有卡片 */
  .product-collection .grid__item {
    display: flex;
    justify-content: center;
  }

  /* 辅助类 - 根据需要添加不同比例 */
  .product-collection .media-ratio-1-1 {
    --media-padding-bottom: 100%;
  }
  .product-collection .media-ratio-4-3 {
    --media-padding-bottom: 75%;
  }
  .product-collection .media-ratio-16-9 {
    --media-padding-bottom: 56.25%;
  }
  .product-collection .media-ratio-3-4 {
    --media-padding-bottom: 133.33%;
  }
{%- endstyle -%}

