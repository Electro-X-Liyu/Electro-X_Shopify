{% schema %}
{
  "name": "Mobile Products Gallery",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Product Gallery"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Image Height (px)",
      "min": 150,
      "max": 500,
      "step": 10,
      "default": 300
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "info": "Image description (for SEO)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mobile Products Gallery",
      "category": "Image Gallery",
      "blocks": [
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        },
        {
          "type": "image_block"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="mobile-product-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <!-- Mobile Slider Layout -->
  <div class="mobile-gallery-container">
    <div class="mobile-slider-wrapper">
      <div class="mobile-slider">
        {% for block in section.blocks %}
          {% if block.type == 'image_block' and block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide {% if forloop.first %}first-slide{% endif %} {% if forloop.last %}last-slide{% endif %}" style="width: calc({{ aspect_ratio }} * {{ section.settings.mobile_height }}px + 16px);">
              <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                <div class="image-wrapper" style="height: {{ section.settings.mobile_height }}px;">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Product image' }}"
                       class="gallery-image"
                       loading="lazy"
                       width="800"
                       height="{{ 800 | divided_by: aspect_ratio | round }}">
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.mobile-product-gallery {
  width: 100%;
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
}

.section-title {
  text-align: center;
  margin-bottom: 20px;
  font-size: 24px;
  color: #333;
  position: relative;
  padding: 0 16px;
}

.mobile-gallery-container {
  display: block;
  width: 100%;
  overflow: hidden;
  position: relative;
  padding: 0;
}

.mobile-slider-wrapper {
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scroll-snap-type: x mandatory;
  scrollbar-width: none;
  /* 移除左右内边距，现在通过首尾slide的伪元素实现 */
  padding: 0 0;
}

.mobile-slider-wrapper::-webkit-scrollbar {
  display: none;
}

.mobile-slider {
  display: flex;
  width: max-content;
  padding: 10px 0;
  /* 使用伪元素为首尾slide创建空白 */
  position: relative;
}

.mobile-slider::before,
.mobile-slider::after {
  content: '';
  flex-shrink: 0;
  width: 16px;
  height: 1px;
}

.mobile-slide {
  flex-shrink: 0;
  margin-right: 16px;
  scroll-snap-align: start;
  padding: 0 0; /* 移除内边距，现在通过margin控制间距 */
  box-sizing: border-box;
}

.mobile-slide:last-child {
  margin-right: 16px;
}

.mobile-slide:first-child {
  margin-left: 16px;
}

.mobile-slide .image-wrapper {
  overflow: hidden;
  width: 100%;
  border-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.gallery-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

/* 桌面端隐藏 */
@media (min-width: 769px) {
  .mobile-product-gallery {
    display: none;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 20px;
    padding: 0 12px;
  }
  
  .mobile-slide {
    margin-right: 12px;
  }
  
  .mobile-slider::before,
  .mobile-slider::after {
    width: 12px;
  }
}
</style>