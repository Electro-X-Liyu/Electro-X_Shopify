        <div class="dots">
            <div class="dot active"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
        
        <div class="indicator">
            <p>滑动或使用箭头浏览更多产品系列</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const carousel = document.querySelector('.carousel');
            const columns = document.querySelectorAll('.column');
            const prevBtn = document.querySelector('.prev');
            const nextBtn = document.querySelector('.next');
            const dots = document.querySelectorAll('.dot');
            
            let currentIndex = 0;
            const columnsToShow = window.innerWidth < 768 ? 1 : (window.innerWidth < 992 ? 2 : 3);
            const totalColumns = columns.length;
            const maxIndex = Math.ceil(totalColumns / columnsToShow) - 1;
            
            // 更新轮播图位置
            function updateCarousel() {
                const translateX = -currentIndex * (100 / columnsToShow);
                carousel.style.transform = `translateX(${translateX}%)`;
                
                // 更新dots状态
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentIndex);
                });
            }
            
            // 下一张
            function nextSlide() {
                currentIndex = (currentIndex >= maxIndex) ? 0 : currentIndex + 1;
                updateCarousel();
                carousel.classList.add('swipe-left');
                setTimeout(() => carousel.classList.remove('swipe-left'), 500);
            }
            
            // 上一张
            function prevSlide() {
                currentIndex = (currentIndex <= 0) ? maxIndex : currentIndex - 1;
                updateCarousel();
                carousel.classList.add('swipe-right');
                setTimeout(() => carousel.classList.remove('swipe-right'), 500);
            }
            
            // 点击dot跳转
            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    currentIndex = index;
                    updateCarousel();
                });
            });
            
            // 按钮事件
            nextBtn.addEventListener('click', nextSlide);
            prevBtn.addEventListener('click', prevSlide);
            
            // 触摸滑动支持
            let startX, moveX;
            carousel.addEventListener('touchstart', (e) => {
                startX = e.touches[0].clientX;
            });
            
            carousel.addEventListener('touchmove', (e) => {
                moveX = e.touches[0].clientX;
            });
            
            carousel.addEventListener('touchend', () => {
                if (startX - moveX > 50) {
                    nextSlide(); // 向左滑动
                } else if (moveX - startX > 50) {
                    prevSlide(); // 向右滑动
                }
            });
            
            // 键盘导航
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    prevSlide();
                } else if (e.key === 'ArrowRight') {
                    nextSlide();
                }
            });
            
            // 响应式调整
            window.addEventListener('resize', () => {
                const newColumnsToShow = window.innerWidth < 768 ? 1 : (window.innerWidth < 992 ? 2 : 3);
                if (newColumnsToShow !== columnsToShow) {
                    currentIndex = 0;
                    updateCarousel();
                }
            });
            
            // 自动播放
            let autoPlay = setInterval(nextSlide, 5000);
            
            // 鼠标悬停时暂停自动播放
            carousel.addEventListener('mouseenter', () => {
                clearInterval(autoPlay);
            });
            
            carousel.addEventListener('mouseleave', () => {
                autoPlay = setInterval(nextSlide, 5000);
            });
        });
    </script>
</body>
</html>