    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Feature heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "text",
          "default": "Describe this feature of your product.",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Footer",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "Hydration",
