{%- comment -%}
  Banner Footer Section
  Inspired by VitaminWell's "BROWSE ALL PRODUCTS" module
  Customizable for Shopify Dawn theme
{%- endcomment -%}

{%- style -%}
  .banner-footer {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px {{ section.settings.padding_right | times: 0.75 | round: 0 }}px {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px {{ section.settings.padding_left | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
    text-align: center;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
  }

  .banner-footer__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size | times: 0.75 | round: 0 }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
  }

  .banner-footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: {{ section.settings.grid_gap }}px;
    margin: 0 auto;
    max-width: {{ section.settings.grid_max_width }}px;
  }

  .banner-footer__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .banner-footer__item:hover {
    transform: translateY(-5px);
  }

  .banner-footer__image-container {
    width: {{ section.settings.image_size }}px;
    height: {{ section.settings.image_size }}px;
    margin-bottom: {{ section.settings.image_spacing }}px;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}%;
  }

  .banner-footer__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .banner-footer__text {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    font-weight: {{ section.settings.text_weight }};
  }

  @media screen and (min-width: 750px) {
    .banner-footer {
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    }

    .banner-footer__heading {
      font-size: {{ section.settings.heading_size }}px;
    }
  }
{%- endstyle -%}

<div class="banner-footer color-{{ section.settings.color_scheme }}">
  {%- if section.settings.heading != blank -%}
    <h2 class="banner-footer__heading">{{ section.settings.heading }}</h2>
  {%- endif -%}

  <div class="banner-footer__grid">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link }}" class="banner-footer__item" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
          <div class="banner-footer__image-container">
            {%- assign image = block.settings.image -%}
            <img
              srcset="{%- if image.width >= 165 -%}{{ image | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if image.width >= 330 -%}{{ image | image_url: width: 330 }} 330w,{%- endif -%}
                {%- if image.width >= 535 -%}{{ image | image_url: width: 535 }} 535w,{%- endif -%}
                {%- if image.width >= 750 -%}{{ image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if image.width >= 1000 -%}{{ image | image_url: width: 1000 }} 1000w,{%- endif -%}
                {%- if image.width >= 1500 -%}{{ image | image_url: width: 1500 }} 1500w,{%- endif -%}"
              src="{{ image | image_url: width: 1500 }}"
              sizes="(min-width: 750px) calc(100vw - 10rem), 100vw"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="banner-footer__image"
            >
          </div>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <span class="banner-footer__text">{{ block.settings.text }}</span>
        {%- endif -%}
      </a>
    {%- endfor -%}
  </div>
</div>

