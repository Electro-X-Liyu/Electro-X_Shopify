{%- style -%}
  .banner-footer {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px {{ section.settings.padding_right | times: 0.75 | round: 0 }}px {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px {{ section.settings.padding_left | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
    text-align: center;
  }

  .banner-footer__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    font-weight: {{ section.settings.heading_weight }};
  }

  .banner-footer__subheading {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    margin-bottom: {{ section.settings.subheading_margin_bottom }}px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .banner-footer__button {
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    display: inline-block;
    margin-top: {{ section.settings.button_margin_top }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  }

  .banner-footer__button:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .banner-footer__products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: {{ section.settings.grid_gap }}px;
    margin-top: {{ section.settings.grid_margin_top }}px;
  }

  .banner-footer__product {
    text-align: center;
    padding: 20px;
  }

  .banner-footer__product-image {
    max-width: 100%;
    height: auto;
    margin-bottom: 15px;
  }

  .banner-footer__product-title {
    color: {{ section.settings.product_title_color }};
    font-size: {{ section.settings.product_title_size }}px;
    margin-bottom: 10px;
  }

  .banner-footer__product-price {
    color: {{ section.settings.product_price_color }};
    font-size: {{ section.settings.product_price_size }}px;
    font-weight: bold;
  }

  @media screen and (min-width: 750px) {
    .banner-footer {
      padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    }
  }
{%- endstyle -%}

<div class="banner-footer page-width">
  {%- if section.settings.heading != blank -%}
    <h2 class="banner-footer__heading">{{ section.settings.heading }}</h2>
  {%- endif -%}
  
  {%- if section.settings.subheading != blank -%}
    <div class="banner-footer__subheading">{{ section.settings.subheading }}</div>
  {%- endif -%}
  
  {%- if section.settings.button_label != blank -%}
    <a href="{{ section.settings.button_link }}" class="banner-footer__button">
      {{ section.settings.button_label }}
    </a>
  {%- endif -%}
  
  {%- if section.settings.show_products -%}
    <div class="banner-footer__products">
      {%- for product in section.settings.product_list -%}
        <div class="banner-footer__product">
          {%- if product.featured_image -%}
            <img src="{{ product.featured_image | img_url: '300x' }}" alt="{{ product.title }}" class="banner-footer__product-image">
          {%- endif -%}
          <h3 class="banner-footer__product-title">{{ product.title }}</h3>
          <div class="banner-footer__product-price">{{ product.price | money }}</div>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

