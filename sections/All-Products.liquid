{% schema %}
{
  "name": "All Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Product Gallery"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Desktop Image Height (px)",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 400
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Image Height (px)",
      "min": 150,
      "max": 500,
      "step": 10,
      "default": 300
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "info": "Image description (for SEO)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "All Products",
      "category": "Image Gallery",
      "blocks": [] 
    }
  ]
}
{% endschema %}

<div class="all-product-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    <!-- Desktop Grid Layout -->
    <div class="gallery-grid desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-card" style="--aspect-ratio: {{ aspect_ratio }}; flex: 0 0 calc({{ aspect_ratio }} * {{ section.settings.desktop_height }}px);" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <div class="image-wrapper" style="height: {{ section.settings.desktop_height }}px;">
                <img src="{{ block.settings.image | img_url: '1200x' }}"
                     alt="{{ block.settings.alt_text | default: 'Product image' }}"
                     class="gallery-image"
                     loading="lazy"
                     width="1200"
                     height="{{ 1200 | divided_by: aspect_ratio | round }}">
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Mobile Slider Layout -->
    <div class="mobile-gallery-container">
      <div class="mobile-slider-wrapper">
        <div class="mobile-slider">
          {% for block in section.blocks %}
            {% if block.settings.image != blank %}
              {% assign aspect_ratio = block.settings.image.aspect_ratio %}
              <div class="mobile-slide" style="width: calc({{ aspect_ratio }} * {{ section.settings.mobile_height }}px + 16px);">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <div class="image-wrapper" style="height: {{ section.settings.mobile_height }}px;">
                    <img src="{{ block.settings.image | img_url: '800x' }}"
                         alt="{{ block.settings.alt_text | default: 'Product image' }}"
                         class="gallery-image"
                         loading="lazy"
                         width="800"
                         height="{{ 800 | divided_by: aspect_ratio | round }}">
                  </div>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.all-product-gallery {
  width: 100%;
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

/* Desktop Styles */
.gallery-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 20px;
  box-sizing: border-box;
}

.image-card {
  position: relative;
  transition: transform 0.3s ease;
  margin: 0;
  padding: 0;
}

.image-wrapper {
  position: relative;
  overflow: visible;
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  width: 100%;
}

.gallery-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  will-change: transform;
}

/* Desktop Hover Effect */
.desktop-gallery .image-card:hover .gallery-image {
  transform: scale(1.15);
  z-index: 10;
}

/* Mobile Styles */
.mobile-gallery-container {
  display: none;
  width: 100%;
  overflow: hidden;
  position: relative;
  padding: 0;
}

.mobile-slider-wrapper {
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scroll-snap-type: x mandatory;
  scrollbar-width: none;
  padding: 0 8px;
}

.mobile-slider-wrapper::-webkit-scrollbar {
  display: none;
}

.mobile-slider {
  display: flex;
  width: max-content;
  padding: 10px 0;
}

.mobile-slide {
  flex-shrink: 0;
  margin-right: 16px;
  scroll-snap-align: start;
  padding: 0 8px;
  box-sizing: border-box;
}

.mobile-slide:last-child {
  margin-right: 0;
}

.mobile-slide .image-wrapper {
  overflow: hidden;
  width: 100%;
  border-radius: 8px;
}

/* Responsive Switching */
@media (min-width: 769px) {
  .mobile-gallery-container {
    display: none !important;
  }
}

@media (max-width: 768px) {
  .gallery-grid {
    display: none;
  }
  
  .mobile-gallery-container {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
    padding: 0 16px;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 20px;
    padding: 0 12px;
  }
  
  .mobile-slide {
    margin-right: 12px;
    padding: 0 6px;
  }
  
  .mobile-slider-wrapper {
    padding: 0 6px;
  }
}
</style>