{% schema %}
{
  "name": "Custom Product Banners",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FEATURED PRODUCTS"
    }
  ],
  "presets": [
    {
      "name": "Custom Product Banners",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-banners-section page-width">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="banners-container">
    {% for i in (1..5) %}
      {% assign banner_image = 'banner-' | append: i | append: '.png' %}
      <div class="banner-item">
        <div class="image-wrapper">
          <img src="{{ banner_image | asset_img_url: '800x' }}" 
               alt="Banner {{ i }}"
               loading="lazy"
               class="banner-image"
               width="800"
               height="800">
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .custom-banners-section {
    margin: 40px auto;
    padding: 0 15px;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 28px;
    color: #333;
  }
  
  .banners-container {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -5px; /* 抵消子元素margin */
  }
  
  .banner-item {
    flex: 1 1 calc(20% - 10px);
    margin: 5px;
    min-width: 150px;
  }
  
  .image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 4px;
  }
  
  .banner-image {
    width: 100%;
    height: 300px; /* 固定高度 */
    object-fit: contain; /* 保持原始比例 */
    display: block;
    background-color: #f5f5f5;
    transition: transform 0.3s ease;
  }
  
  .banner-item:hover .banner-image {
    transform: scale(1.03);
  }
  
  @media screen and (max-width: 1024px) {
    .banner-item {
      flex: 1 1 calc(25% - 10px);
    }
  }
  
  @media screen and (max-width: 768px) {
    .banner-item {
      flex: 1 1 calc(33.333% - 10px);
    }
  }
  
  @media screen and (max-width: 480px) {
    .banner-item {
      flex: 1 1 calc(50% - 10px);
    }
    
    .banner-image {
      height: 200px;
    }
  }
</style>