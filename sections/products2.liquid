{% schema %}
{
  "name": "产品横幅展示",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "区块标题",
      "default": "特色产品"
    }
  ],
  "presets": [
    {
      "name": "产品横幅展示",
      "category": "图片"
    }
  ]
}
{% endschema %}

<div class="custom-banner-container">
  {% if section.settings.title != blank %}
    <h2 class="banner-section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="banner-grid">
    {% for i in (1..5) %}
      {% assign banner_image = 'banner-' | append: i %}
      <div class="banner-item">
        {{ banner_image | placeholder_svg_tag: 'placeholder-svg' }}
        <img class="banner-image"
             src="{{ banner_image | append: '.jpg' | file_img_url: '800x' }}"
             alt="产品横幅 {{ i }}"
             loading="lazy"
             onerror="this.style.display='none';this.nextElementSibling.style.display='block'">
        {{ banner_image | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .custom-banner-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .banner-section-title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 28px;
    color: #333;
  }
  
  .banner-grid {
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }
  
  .banner-item {
    flex: 1;
    position: relative;
    overflow: hidden;
    height: 400px; /* 设置固定高度 */
  }
  
  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: contain; /* 保持原始比例 */
    object-position: center;
    transition: transform 0.3s ease;
  }
  
  .banner-item:hover .banner-image {
    transform: scale(1.03);
  }
  
  .placeholder-svg {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    display: none; /* 默认隐藏，仅在图片加载失败时显示 */
  }
  
  @media (max-width: 1024px) {
    .banner-grid {
      flex-wrap: wrap;
    }
    
    .banner-item {
      flex: 0 0 calc(50% - 5px);
      height: 300px;
    }
  }
  
  @media (max-width: 640px) {
    .banner-item {
      flex: 0 0 100%;
      height: 250px;
    }
  }
</style>