{% schema %}
{
  "name": "Product 2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "区块标题",
      "default": "精选产品"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "图片高度(px)",
      "min": 200,
      "max": 800,
      "step": 20,
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "product_banner",
      "name": "产品横幅",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "横幅图片"
        },
        {
          "type": "text",
          "id": "title",
          "label": "产品标题"
        },
        {
          "type": "url",
          "id": "link",
          "label": "产品链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "精选产品横幅展示",
      "blocks": [
        {
          "type": "product_banner"
        },
        {
          "type": "product_banner"
        },
        {
          "type": "product_banner"
        },
        {
          "type": "product_banner"
        },
        {
          "type": "product_banner"
        }
      ]
    }
  ],
  "max_blocks": 5
}
{% endschema %}

<div class="featured-banners-section page-width">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="banners-grid">
    {% for block in section.blocks %}
      {% assign banner_index = forloop.index %}
      <div class="banner-item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <a href="{{ block.settings.link }}" class="banner-link">
            <div class="image-wrapper" style="height: {{ section.settings.image_height }}px;">
              <img 
                src="{{ block.settings.image | img_url: '800x' }}" 
                alt="{{ block.settings.title | escape }}"
                class="banner-image"
                loading="lazy"
                width="800"
                height="{{ section.settings.image_height }}"
                style="object-fit: contain;"
              >
            </div>
            {% if block.settings.title != blank %}
              <h3 class="banner-title">{{ block.settings.title }}</h3>
            {% endif %}
          </a>
        {% else %}
          <div class="placeholder-image" style="height: {{ section.settings.image_height }}px;">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .featured-banners-section {
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .section-title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 28px;
    color: #333;
  }
  
  .banners-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 20px;
  }
  
  .banner-item {
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .banner-item:hover {
    transform: translateY(-5px);
  }
  
  .image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .banner-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    display: block;
  }
  
  .banner-title {
    margin-top: 15px;
    text-align: center;
    font-size: 16px;
    color: #333;
  }
  
  .banner-link {
    text-decoration: none;
    color: inherit;
  }
  
  @media (max-width: 1024px) {
    .banners-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .banners-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .section-title {
      font-size: 24px;
    }
  }
  
  @media (max-width: 480px) {
    .banners-grid {
      grid-template-columns: 1fr;
    }
  }
</style>