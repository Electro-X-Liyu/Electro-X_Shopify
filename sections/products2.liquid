.custom-image-grid {
  display: flex;
  gap: 15px;
  width: 100%;
  overflow-x: auto;
}

.image-card {
  flex: 0 0 calc(20% - 12px);
  aspect-ratio: 1/1; /* 设置固定的宽高比 1:1 */
}

.image-container {
  width: 100%;
  height: 100%; /* 改为100%以适应父容器 */
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
  border-radius: 4px;
}

.grid-image {
  width: 100%;
  height: 100%;
  object-fit: contain; /* 改为contain以保持图片原始比例 */
  object-position: center;
  transition: transform 0.5s ease;
}

/* 移除固定高度相关的媒体查询 */
@media (max-width: 1024px) {
  .image-card {
    flex: 0 0 calc(33.333% - 10px);
  }
}

@media (max-width: 768px) {
  .image-card {
    flex: 0 0 calc(50% - 8px);
  }
}

@media (max-width: 480px) {
  .image-card {
    flex: 0 0 calc(100% - 6px);
  }
}