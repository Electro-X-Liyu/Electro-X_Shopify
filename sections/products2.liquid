{% schema %}
{
  "name": "不等宽产品网格",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "SMART THIRST-QUENCHERS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "选择产品集合"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "图片高度(px)",
      "min": 200,
      "max": 600,
      "step": 10,
      "default": 400
    }
  ],
  "presets": [
    {
      "name": "不等宽产品网格",
      "category": "产品展示"
    }
  ]
}
{% endschema %}

<div class="uneven-product-grid-section">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="uneven-product-grid">
    {% assign collection = collections[section.settings.collection] %}
    {% assign product_count = 0 %}
    
    {% for product in collection.products limit: 5 %}
      {% assign product_count = product_count | plus: 1 %}
      {% assign aspect_ratio = product.featured_image.aspect_ratio %}
      <div class="product-card" style="--aspect-ratio: {{ aspect_ratio }};">
        <a href="{{ product.url }}" class="product-link">
          <div class="image-container" style="height: {{ section.settings.image_height }}px;">
            <img src="{{ product.featured_image | img_url: '800x' }}" 
                 alt="{{ product.title | escape }}"
                 class="product-image"
                 loading="lazy"
                 width="800"
                 height="{{ 800 | divided_by: aspect_ratio | round }}">
            <div class="hover-overlay"></div>
          </div>
          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            <div class="product-price">{{ product.price | money }}</div>
          </div>
        </a>
      </div>
    {% endfor %}
    
    {% comment %} 如果产品不足5个，填充空白项保持布局 {% endcomment %}
    {% for i in (product_count..4) %}
      <div class="product-card empty-card" style="--aspect-ratio: 1;"></div>
    {% endfor %}
  </div>
</div>

<style>
.uneven-product-grid-section {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
  box-sizing: border-box;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

.uneven-product-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 15px;
  width: 100%;
}

.product-card {
  position: relative;
  transition: all 0.3s ease;
  width: 100%;
}

.product-card:hover {
  transform: translateY(-5px);
}

.image-container {
  width: 100%;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
  border-radius: 4px;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.hover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.03);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card:hover .hover-overlay {
  opacity: 1;
}

.product-card:hover .product-image {
  transform: scale(1.05);
}

.product-info {
  padding: 15px 0;
  text-align: center;
}

.product-title {
  margin: 0 0 5px 0;
  font-size: 16px;
  color: #333;
  transition: color 0.3s ease;
}

.product-price {
  font-size: 16px;
  color: #666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.product-link:hover .product-title,
.product-link:hover .product-price {
  color: #000;
}

.empty-card {
  visibility: hidden;
}

/* 保持移动端5列布局 */
@media (max-width: 1024px) {
  .uneven-product-grid {
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
  }
  
  .image-container {
    height: {{ section.settings.image_height | times: 0.8 }}px !important;
  }
}

@media (max-width: 768px) {
  .uneven-product-grid {
    gap: 8px;
  }
  
  .image-container {
    height: {{ section.settings.image_height | times: 0.7 }}px !important;
  }
  
  .product-info {
    padding: 10px 0;
  }
  
  .product-title,
  .product-price {
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .uneven-product-grid {
    gap: 6px;
  }
  
  .image-container {
    height: {{ section.settings.image_height | times: 0.6 }}px !important;
  }
}
</style>