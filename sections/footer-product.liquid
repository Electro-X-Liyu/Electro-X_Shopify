{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* Custom styles for product footer */
  .footer-product__heading {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
  
  .footer-product__link {
    display: block;
    margin-bottom: 0.5rem;
    text-decoration: none;
  }
  
  .footer-product__newsletter {
    max-width: 400px;
    margin: 0 auto;
  }
  
  .footer-product__email-input {
    display: flex;
    align-items: center;
  }
  
  .footer-product__email-input .field__input {
    border: none;
    border-bottom: 1px solid currentColor;
    border-radius: 0;
    padding-left: 0;
  }
  
  .footer-product__email-input .newsletter-form__button {
    border-bottom: 1px solid currentColor;
    border-radius: 0;
    padding-right: 0;
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content-top page-width">
    <div class="footer__blocks-wrapper grid grid--1-col grid--2-col grid--4-col-tablet">
      <!-- Newsletter Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-product__heading">Find the ELECTRO X</h2>
        <div class="footer-block__details-content">
          <p>Subscribe for product updates, insights and offers.</p>
          <div class="footer-product__newsletter">
            {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="footer-product__email-input">
                <div class="field">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="Email:"
                    required
                  >
                  <button
                    type="submit"
                    class="newsletter-form__button field__button"
                    name="commit"
                    id="Subscribe"
                    aria-label="Subscribe"
                  >
                    SUBSCRIBE >
                  </button>
                </div>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="ContactFooter-success"
                  tabindex="-1"
                  autofocus
                >
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {%- endform -%}
          </div>
          <p>This can be generated by eCupData and the eCupData Privacy Policy and Terms of Service apply</p>
        </div>
      </div>
      
      <!-- Products Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-product__heading">Products</h2>
        <div class="footer-block__details-content">
          <a href="{{ section.settings.products_link_1 }}" class="footer-product__link">Natural Abaline Water</a>
          <a href="{{ section.settings.products_link_2 }}" class="footer-product__link">Electrolyte Sports Drink</a>
          <a href="{{ section.settings.products_link_3 }}" class="footer-product__link">Liquid Concentrate</a>
        </div>
      </div>
      
      <!-- Community Section -->
      <div class="footer-block grid__item">
        <h2 class="footer-product__heading">Community</h2>
        <div class="footer-block__details-content">
          <a href="{{ section.settings.community_link }}" class="footer-product__link">About Us</a>
        </div>
      </div>
    </div>
  </div>

  <div class="footer__content-bottom">
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__column footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__copyright caption">
        <small class="copyright__content"
          >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
        </small>
        <small class="copyright__content">{{ powered_by_link }}</small>
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer Product",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "url",
      "id": "products_link_1",
      "label": "Natural Abaline Water Link"
    },
    {
      "type": "url",
      "id": "products_link_2",
      "label": "Electrolyte Sports Drink Link"
    },
    {
      "type": "url",
      "id": "products_link_3",
      "label": "Liquid Concentrate Link"
    },
    {
      "type": "url",
      "id": "community_link",
      "label": "About Us Link"
    },
    {
      "type": "header",
      "content": "Payment methods"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "Enable payment methods"
    },
    {
      "type": "header",
      "content": "Policies"
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": true,
      "label": "Show policies"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ]
}
{% endschema %}