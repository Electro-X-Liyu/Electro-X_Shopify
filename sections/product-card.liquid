<div class="product-card-section section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="product-card {% if section.settings.layout == 'right' %}product-card--reverse{% endif %}">
      <div class="product-card__image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '1000x' }}" 
               alt="{{ section.settings.image.alt | escape }}" 
               loading="lazy"
               width="1000"
               height="{{ 1000 | divided_by: section.settings.image.aspect_ratio | round }}"
               class="product-card__image-element">
        {% else %}
          <div class="product-card__placeholder">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="product-card__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <h2 class="product-card__title block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </h2>
            
            {% when 'subtitle' %}
              <p class="product-card__subtitle block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'variants' %}
              <p class="product-card__variants block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'description' %}
              <div class="product-card__description block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            
            {% when 'features' %}
              <ul class="product-card__features block-{{ block.id }}" {{ block.shopify_attributes }}>
                {% assign features = block.settings.text | split: '|' %}
                {% for feature in features %}
                  <li class="product-card__feature-item">{{ feature | strip }}</li>
                {% endfor %}
              </ul>
            
            {% when 'button' %}
              <div class="product-card__button-wrapper block-{{ block.id }}" {{ block.shopify_attributes }}>
                <a href="{{ block.settings.link | default: '#' }}" class="product-card__button">
                  <span>{{ block.settings.text }}</span>
                  <div class="button-underline"></div>
                </a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .product-card-section.section-{{ section.id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .product-card {
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .product-card--reverse {
    flex-direction: row-reverse;
  }
  
  .product-card__image {
    flex: 0 0 50%;
    width: 50%;
  }
  
  .product-card__image-element {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .product-card__placeholder {
    width: 100%;
    height: 500px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-card__content {
    flex: 0 0 50%;
    width: 50%;
    padding: 0 40px;
  }
  
  /* 标题样式 */
  .product-card__title {
    font-size: 32px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    line-height: 1.2;
  }
  
  /* 副标题样式 */
  .product-card__subtitle {
    font-size: 18px;
    font-weight: 500;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 20px;
  }
  
  /* 变体样式 */
  .product-card__variants {
    font-size: 16px;
    color: {{ section.settings.text_color }};
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }
  
  /* 描述样式 */
  .product-card__description {
    font-size: 16px;
    color: {{ section.settings.text_color }};
    margin-bottom: 25px;
    line-height: 1.6;
  }
  
  /* 特性列表样式 */
  .product-card__features {
    margin: 0 0 30px;
    padding-left: 0;
    list-style: none;
  }
  
  .product-card__feature-item {
    position: relative;
    padding-left: 25px;
    margin-bottom: 10px;
    font-size: 16px;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
  }
  
  .product-card__feature-item:before {
    content: "";
    position: absolute;
    left: 0;
    top: 10px;
    width: 12px;
    height: 2px;
    background-color: {{ section.settings.accent_color }};
  }
  
  /* 按钮样式 - 与示例一致 */
  .product-card__button-wrapper {
    margin-top: 30px;
  }
  
  .product-card__button {
    display: inline-block;
    color: {{ section.settings.button_color }};
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    position: relative;
    padding-bottom: 5px;
  }
  
  .button-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: {{ section.settings.button_color }};
    transform: scaleX(1);
    transform-origin: left center;
    transition: transform 0.3s ease;
  }
  
  .product-card__button:hover .button-underline {
    transform: scaleX(0.8);
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .product-card-section.section-{{ section.id }} {
      padding: {{ section.settings.mobile_section_padding_top }}px 0 {{ section.settings.mobile_section_padding_bottom }}px;
    }
    
    .product-card {
      flex-direction: column;
      gap: 30px;
    }
    
    .product-card--reverse {
      flex-direction: column;
    }
    
    .product-card__image,
    .product-card__content {
      flex: 1 1 100%;
      width: 100%;
      padding: 0;
    }
    
    .product-card__title {
      font-size: 26px;
    }
    
    .product-card__subtitle {
      font-size: 16px;
    }
  }
</style>

