<div class="product-card-section section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="product-card {% if section.settings.layout == 'right' %}product-card--reverse{% endif %}">
      <div class="product-card__image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '1000x' }}" 
               alt="{{ section.settings.image.alt | escape }}" 
               loading="lazy"
               width="1000"
               height="{{ 1000 | divided_by: section.settings.image.aspect_ratio | round }}"
               class="product-card__image-element">
        {% else %}
          <div class="product-card__placeholder">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="product-card__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <h2 class="product-card__title block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </h2>
            
            {% when 'subtitle' %}
              <p class="product-card__subtitle block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'variants' %}
              <p class="product-card__variants block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'description' %}
              <div class="product-card__description block-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            
            {% when 'features' %}
              <ul class="product-card__features block-{{ block.id }}" {{ block.shopify_attributes }}>
                {% assign features = block.settings.text | split: '|' %}
                {% for feature in features %}
                  <li class="product-card__feature-item">{{ feature | strip }}</li>
                {% endfor %}
              </ul>
            
            {% when 'spacer' %}
              <div class="product-card__spacer block-{{ block.id }}" style="height: {{ block.settings.height }}px;" {{ block.shopify_attributes }}></div>
            
            {% when 'button' %}
              <a href="{{ block.settings.link | default: '#' }}" 
                 class="product-card__button block-{{ block.id }}" 
                 {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .product-card-section.section-{{ section.id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .product-card {
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_gap }}px;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }
  
  .product-card--reverse {
    flex-direction: row-reverse;
  }
  
  .product-card__image {
    flex: 1 1 50%;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ section.settings.image_shadow }};
  }
  
  .product-card__image-element {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .product-card__placeholder {
    width: 100%;
    height: {{ section.settings.image_min_height }}px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-card__content {
    flex: 1 1 50%;
    padding: {{ section.settings.content_padding }}px;
  }
  
  @media (max-width: 768px) {
    .product-card-section.section-{{ section.id }} {
      padding: {{ section.settings.mobile_section_padding_top }}px 0 {{ section.settings.mobile_section_padding_bottom }}px;
    }
    
    .product-card {
      flex-direction: column;
      gap: {{ section.settings.mobile_content_gap }}px;
    }
    
    .product-card--reverse {
      flex-direction: column;
    }
  }
  
  {% for block in section.blocks %}
    {% if block.type == 'title' %}
      .product-card__title.block-{{ block.id }} {
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
        color: {{ block.settings.color }};
        margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
        line-height: {{ block.settings.line_height }};
        letter-spacing: {{ block.settings.letter_spacing }}em;
        text-align: {{ block.settings.text_align }};
        {% if block.settings.uppercase %}text-transform: uppercase;{% endif %}
        {% if block.settings.font_style == 'italic' %}font-style: italic;{% endif %}
        {% if block.settings.text_shadow != 'none' %}text-shadow: {{ block.settings.text_shadow }};{% endif %}
      }
    {% endif %}
    
    {% if block.type == 'subtitle' %}
      .product-card__subtitle.block-{{ block.id }} {
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
        color: {{ block.settings.color }};
        margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
        line-height: {{ block.settings.line_height }};
        letter-spacing: {{ block.settings.letter_spacing }}em;
        text-align: {{ block.settings.text_align }};
        {% if block.settings.uppercase %}text-transform: uppercase;{% endif %}
        {% if block.settings.font_style == 'italic' %}font-style: italic;{% endif %}
      }
    {% endif %}
    
    {% if block.type == 'variants' %}
      .product-card__variants.block-{{ block.id }} {
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
        color: {{ block.settings.color }};
        margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
        line-height: {{ block.settings.line_height }};
        {% if block.settings.show_border %}
          padding-bottom: {{ block.settings.border_spacing }}px;
          border-bottom: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
        {% endif %}
      }
    {% endif %}
    
    {% if block.type == 'description' %}
      .product-card__description.block-{{ block.id }} {
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
        color: {{ block.settings.color }};
        margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
        line-height: {{ block.settings.line_height }};
      }
    {% endif %}
    
    {% if block.type == 'features' %}
      .product-card__features.block-{{ block.id }} {
        margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
        padding-left: 0;
        list-style: none;
      }
      
      .product-card__features.block-{{ block.id }} .product-card__feature-item {
        position: relative;
        padding-left: {{ block.settings.bullet_size | plus: 10 }}px;
        margin-bottom: {{ block.settings.item_spacing }}px;
        font-size: {{ block.settings.font_size }}px;
      }
      
      .product-card__features.block-{{ block.id }} .product-card__feature-item:before {
        content: "";
        position: absolute;
        left: 0;
        top: {{ block.settings.bullet_position }}px;
        width: {{ block.settings.bullet_size }}px;
        height: {{ block.settings.bullet_size }}px;
        background-color: {{ block.settings.bullet_color }};
      }
    {% endif %}
    
    {% if block.type == 'button' %}
      .product-card__button.block-{{ block.id }} {
        display: inline-block;
        padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
        background-color: {{ block.settings.background_color }};
        color: {{ block.settings.text_color }};
        border-radius: {{ block.settings.border_radius }}px;
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
        border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
        transition: all 0.3s ease;
        {% if block.settings.full_width %}width: 100%;{% endif %}
      }
      
      .product-card__button.block-{{ block.id }}:hover {
        background-color: {{ block.settings.hover_background_color }};
        color: {{ block.settings.hover_text_color }};
        border-color: {{ block.settings.hover_border_color }};
      }
    {% endif %}
  {% endfor %}
</style>

