<div class="product-card-section section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="product-card {% if section.settings.layout == 'right' %}product-card--reverse{% endif %}">
      <div class="product-card__image" style="margin-left: {{ section.settings.image_margin_left }}px; margin-right: {{ section.settings.image_margin_right }}px;">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: '1000x' }}" 
               alt="{{ section.settings.image.alt | escape }}" 
               loading="lazy"
               width="1000"
               height="{{ 1000 | divided_by: section.settings.image.aspect_ratio | round }}"
               class="product-card__image-element">
        {% else %}
          <div class="product-card__placeholder">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      <div class="product-card__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <h2 class="product-card__title block-{{ block.id }}" style="color: {{ block.settings.color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </h2>
            
            {% when 'subtitle' %}
              <p class="product-card__subtitle block-{{ block.id }}" style="color: {{ block.settings.color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'variants' %}
              <p class="product-card__variants block-{{ block.id }}" style="color: {{ block.settings.color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </p>
            
            {% when 'description' %}
              <div class="product-card__description block-{{ block.id }}" style="color: {{ block.settings.color }};" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            
            {% when 'features' %}
              <ul class="product-card__features block-{{ block.id }}" style="color: {{ block.settings.color }};" {{ block.shopify_attributes }}>
                {% assign features = block.settings.text | split: '|' %}
                {% for feature in features %}
                  <li class="product-card__feature-item">{{ feature | strip }}</li>
                {% endfor %}
              </ul>
            
            {% when 'button' %}
              <a href="{{ block.settings.link | default: '#' }}" 
                 class="product-card__button block-{{ block.id }}" 
                 style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }}; border: 1px solid {{ block.settings.border_color }};"
                 {{ block.shopify_attributes }}>
                <span class="button-text">{{ block.settings.text }}</span>
                <span class="button-arrow">→</span>
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .product-card-section.section-{{ section.id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .product-card {
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_gap }}px;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }
  
  .product-card--reverse {
    flex-direction: row-reverse;
  }
  
  .product-card__image {
    flex: 1 1 50%;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }
  
  .product-card__image-element {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .product-card__placeholder {
    width: 100%;
    height: {{ section.settings.image_min_height }}px;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-card__content {
    flex: 1 1 50%;
    padding: {{ section.settings.content_padding }}px;
  }
  
  .product-card__title {
    font-size: 28px;
    font-weight: 600;
    margin: 0 0 15px 0;
    line-height: 1.2;
  }
  
  .product-card__subtitle {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 20px 0;
  }
  
  .product-card__variants {
    font-size: 14px;
    margin: 0 0 25px 0;
    padding-bottom: 15px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }
  
  .product-card__description {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 20px 0;
  }
  
  .product-card__features {
    margin: 0 0 30px 0;
    padding-left: 0;
    list-style: none;
  }
  
  .product-card__feature-item {
    position: relative;
    padding-left: 25px;
    margin-bottom: 10px;
    font-size: 15px;
  }
  
  .product-card__feature-item:before {
    content: "";
    position: absolute;
    left: 0;
    top: 8px;
    width: 12px;
    height: 2px;
    background-color: currentColor;
  }
  
  .product-card__button {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 200px;
  }
  
  .product-card__button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  .product-card__button .button-arrow {
    margin-left: 10px;
    transition: transform 0.3s ease;
  }
  
  .product-card__button:hover .button-arrow {
    transform: translateX(3px);
  }
  
  @media (max-width: 768px) {
    .product-card {
      flex-direction: column;
      gap: 30px;
    }
    
    .product-card--reverse {
      flex-direction: column;
    }
    
    .product-card__image {
      margin-left: 0 !important;
      margin-right: 0 !important;
    }
    
    .product-card__button {
      max-width: none;
    }
  }
</style>

