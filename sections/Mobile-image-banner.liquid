/* Mobile banner styles */
.mobile-banner {
  position: relative;
}

.mobile-banner__content {
  position: relative;
}

.mobile-banner__link {
  display: block;
  text-decoration: none;
  position: relative;
}

.mobile-banner__image {
  display: block;
  width: 100%;
  height: auto;
  border-radius: 0;
}

.mobile-banner__placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.05);
  min-height: 200px;
}

.mobile-banner__text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  width: 100%;
  padding: 0 2rem;
  color: #fff;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.mobile-banner__heading {
  margin: 0 0 0.5rem;
  color: inherit;
}

.mobile-banner__subheading {
  margin: 0;
  font-size: 1.4rem;
}

/* Hide on desktop */
@media screen and (min-width: 750px) {
  .mobile-banner {
    display: none !important;
  }
}

/* Mobile responsiveness */
@media screen and (max-width: 749px) {
  .mobile-banner__heading {
    font-size: calc(var(--font-heading-scale) * 2.4rem);
  }
  
  .mobile-banner__subheading {
    font-size: 1.2rem;
  }
}