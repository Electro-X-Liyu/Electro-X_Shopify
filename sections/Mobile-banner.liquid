    <style>
        /* 基础样式 */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }
        
        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        /* Mobile-Banner 样式 */
        .mobile-banner {
            position: relative;
            width: 100%;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }
        
        .banner-media {
            position: relative;
            width: 100%;
        }
        
        .banner-media.adapt::before {
            content: '';
            display: block;
            padding-bottom: 56.25%; /* 16:9 比例 */
        }
        
        .banner-media img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
        
        .banner-content {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            padding: 20px;
        }
        
        .banner-box {
            background-color: rgba(255, 255, 255, 0.85);
            padding: 25px;
            border-radius: 10px;
            max-width: 400px;
            margin: auto;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .banner-heading {
            margin-bottom: 15px;
            color: #2c3e50;
            line-height: 1.2;
        }
        
        .banner-text {
            margin-bottom: 20px;
            color: #34495e;
        }
        
        .banner-buttons {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }
        
        .banner-button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }
        
        .banner-button:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        
        .banner-button.secondary {
            background-color: transparent;
            color: #3498db;
            border: 2px solid #3498db;
        }
        
        .banner-button.secondary:hover {
            background-color: #3498db;
            color: white;
        }
        
        /* 自定义控件样式 */
        .controls {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
        }
        
        .control-group {
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        
        .control-group h3 {
            margin-bottom: 15px;
            color: #2c3e50;
            font-size: 18px;
        }
        
        .control-row {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 12px;
        }
        
        .control-item {
            flex: 1;
            min-width: 200px;
        }
        
        .control-item label {
            display: block;
            margin-bottom: 6px;
            font-weight: 500;
            color: #34495e;
        }
        
        .control-item input,
        .control-item select {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 16px;
        }
        
        .control-item input[type="color"] {
            height: 40px;
            padding: 2px;
        }
        
        .control-item input[type="range"] {
            padding: 0;
        }
        
        .range-value {
            font-size: 14px;
            color: #7f8c8d;
            text-align: center;
        }
        
        /* 响应式设计 */
        @media (min-width: 768px) {
            .banner-box {
                width: 70%;
            }
        }
        
        @media (max-width: 767px) {
            .banner-content {
                padding: 15px;
            }
            
            .banner-box {
                padding: 20px;
                max-width: none;
            }
            
            .banner-buttons {
                flex-direction: column;
            }
            
            .banner-button {
                text-align: center;
            }
        }
        
        .preview-title {
            text-align: center;
            margin: 20px 0;
            color: #2c3e50;
        }
        
        .code-container {
            background: #2d2d2d;
            color: #f8f8f2;
            padding: 20px;
            border-radius: 8px;
            overflow-x: auto;
            margin-top: 30px;
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 14px;
        }
    </style>
</head>
