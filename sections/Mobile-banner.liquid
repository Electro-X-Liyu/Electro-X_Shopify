            const headingText = document.getElementById('headingText');
            const headingSize = document.getElementById('headingSize');
            const headingSizeValue = document.getElementById('headingSizeValue');
            const headingColor = document.getElementById('headingColor');
            const headingWeight = document.getElementById('headingWeight');
            
            const textContent = document.getElementById('textContent');
            const textSize = document.getElementById('textSize');
            const textSizeValue = document.getElementById('textSizeValue');
            const textColor = document.getElementById('textColor');
            const textWeight = document.getElementById('textWeight');
            
            const imageLink = document.getElementById('imageLink');
            
            // 获取所有显示元素
            const bannerHeading = document.getElementById('bannerHeading');
            const bannerText = document.getElementById('bannerText');
            const bannerImageLink = document.getElementById('bannerImageLink');
            
            // 初始化显示值
            headingSizeValue.textContent = `${headingSize.value}px`;
            textSizeValue.textContent = `${textSize.value}px`;
            
            // 标题文本更新
            headingText.addEventListener('input', function() {
                bannerHeading.textContent = this.value;
            });
            
            // 标题字体大小更新
            headingSize.addEventListener('input', function() {
                const size = this.value;
                bannerHeading.style.fontSize = `${size}px`;
                headingSizeValue.textContent = `${size}px`;
            });
            
            // 标题颜色更新
            headingColor.addEventListener('input', function() {
                bannerHeading.style.color = this.value;
            });
            
            // 标题字重更新
            headingWeight.addEventListener('change', function() {
                bannerHeading.style.fontWeight = this.value;
            });
            
            // 文本内容更新
            textContent.addEventListener('input', function() {
                bannerText.textContent = this.value;
            });
            
            // 文本字体大小更新
            textSize.addEventListener('input', function() {
                const size = this.value;
                bannerText.style.fontSize = `${size}px`;
                textSizeValue.textContent = `${size}px`;
            });
            
            // 文本颜色更新
            textColor.addEventListener('input', function() {
                bannerText.style.color = this.value;
            });
            
            // 文本字重更新
            textWeight.addEventListener('change', function() {
                bannerText.style.fontWeight = this.value;
            });
            
            // 图片链接更新
            imageLink.addEventListener('input', function() {
                bannerImageLink.href = this.value;
            });
        });
