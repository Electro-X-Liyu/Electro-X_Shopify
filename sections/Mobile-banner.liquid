  "blocks": [
    {
      "type": "heading",
      "name": "标题",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "图片标题",
          "label": "标题"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "小"
            },
            {
              "value": "h1",
              "label": "中"
            },
            {
              "value": "h0",
              "label": "大"
            }
          ],
          "default": "h1",
          "label": "标题大小"
