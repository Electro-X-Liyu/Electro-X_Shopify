{% schema %}
{
  "name": "All Product",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "产品展示"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "PC端图片高度(px)",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 400
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "移动端图片高度(px)",
      "min": 150,
      "max": 500,
      "step": 10,
      "default": 300
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "产品块",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "产品图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "产品链接"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "产品名称",
          "info": "用于SEO优化"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "All Product",
      "category": "产品展示",
      "blocks": [
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"}
      ]
    }
  ]
}
{% endschema %}

<div class="all-product-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    <!-- PC端网格布局 -->
    <div class="gallery-grid desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-card" style="--aspect-ratio: {{ aspect_ratio }}; flex: 0 0 calc({{ aspect_ratio }} * {{ section.settings.desktop_height }}px);" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <div class="image-wrapper" style="height: {{ section.settings.desktop_height }}px;">
                <img src="{{ block.settings.image | img_url: '1200x' }}"
                     alt="{{ block.settings.alt_text | default: 'Product Image' }}"
                     class="gallery-image"
                     loading="lazy"
                     width="1200"
                     height="{{ 1200 | divided_by: aspect_ratio | round }}">
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- 移动端全屏滑动布局 -->
    <div class="mobile-fullscreen-container">
      <div class="mobile-slider">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="width: 100vw;">
              <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                <div class="image-wrapper" style="height: {{ section.settings.mobile_height }}px;">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Product Image' }}"
                       class="gallery-image"
                       loading="lazy"
                       width="800"
                       height="{{ 800 | divided_by: aspect_ratio | round }}"
                       style="width: 100%; height: 100%; object-fit: contain;">
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
        <!-- 循环滑动需要的副本 -->
        {% for block in section.blocks limit: 2 %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="width: 100vw;">
              <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                <div class="image-wrapper" style="height: {{ section.settings.mobile_height }}px;">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Product Image' }}"
                       class="gallery-image"
                       loading="lazy"
                       width="800"
                       height="{{ 800 | divided_by: aspect_ratio | round }}"
                       style="width: 100%; height: 100%; object-fit: contain;">
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.all-product-gallery {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
  box-sizing: border-box;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

/* PC端样式 */
.gallery-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
  width: 100%;
  margin: 0 auto;
}

.image-card {
  position: relative;
  transition: transform 0.3s ease;
  margin: 0;
  padding: 0;
}

.image-wrapper {
  position: relative;
  overflow: visible;
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  width: 100%;
}

.gallery-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  will-change: transform;
}

/* PC端悬停效果 */
.desktop-gallery .image-card:hover .gallery-image {
  transform: scale(1.15);
  z-index: 10;
}

/* 移动端全屏样式 */
.mobile-fullscreen-container {
  display: none;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  overflow: hidden;
  position: relative;
}

.mobile-slider {
  display: flex;
  transition: transform 0.5s ease;
  height: 100%;
  will-change: transform;
}

.mobile-slide {
  flex-shrink: 0;
  width: 100vw;
  scroll-snap-align: start;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mobile-slide .image-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20px;
  box-sizing: border-box;
}

/* 响应式切换 */
@media (min-width: 769px) {
  .mobile-fullscreen-container {
    display: none !important;
  }
}

@media (max-width: 768px) {
  .all-product-gallery {
    max-width: 100%;
    padding: 0;
  }
  
  .gallery-grid {
    display: none;
  }
  
  .mobile-fullscreen-container {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
    padding: 0 20px;
  }
  
  .section-title:after {
    width: 60px;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 20px;
    margin-bottom: 15px;
  }
  
  .mobile-slide .image-wrapper {
    padding: 0 15px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileSlider = document.querySelector('.mobile-slider');
  
  if (mobileSlider && mobileSlider.children.length > 1) {
    const slides = mobileSlider.children;
    const slideCount = slides.length - 2; // 减去复制的2个slide
    const slideWidth = window.innerWidth;
    
    // 初始化位置
    mobileSlider.style.width = `${slideWidth * (slideCount + 2)}px`;
    mobileSlider.style.transform = `translateX(0)`;
    
    let isDragging = false;
    let startPos = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let animationID;
    let currentIndex = 0;
    
    // 处理窗口大小变化
    function handleResize() {
      const newSlideWidth = window.innerWidth;
      const ratio = newSlideWidth / slideWidth;
      mobileSlider.style.width = `${newSlideWidth * (slideCount + 2)}px`;
      currentTranslate = currentTranslate * ratio;
      prevTranslate = prevTranslate * ratio;
      setSliderPosition();
    }
    
    window.addEventListener('resize', handleResize);
    
    // 触摸事件
    mobileSlider.addEventListener('touchstart', touchStart);
    mobileSlider.addEventListener('touchend', touchEnd);
    mobileSlider.addEventListener('touchmove', touchMove);
    
    // 鼠标事件
    mobileSlider.addEventListener('mousedown', touchStart);
    mobileSlider.addEventListener('mouseup', touchEnd);
    mobileSlider.addEventListener('mouseleave', touchEnd);
    mobileSlider.addEventListener('mousemove', touchMove);
    
    function touchStart(e) {
      isDragging = true;
      startPos = getPositionX(e);
      animationID = requestAnimationFrame(animation);
      mobileSlider.style.cursor = 'grabbing';
      mobileSlider.style.transition = 'none';
    }
    
    function touchEnd() {
      isDragging = false;
      cancelAnimationFrame(animationID);
      
      const movedBy = currentTranslate - prevTranslate;
      
      if (movedBy < -50) {
        currentIndex += 1;
      } else if (movedBy > 50) {
        currentIndex -= 1;
      }
      
      // 循环逻辑
      if (currentIndex < 0) {
        currentIndex = slideCount - 1;
      } else if (currentIndex >= slideCount) {
        currentIndex = 0;
      }
      
      setSliderPosition();
      mobileSlider.style.cursor = 'grab';
      mobileSlider.style.transition = 'transform 0.5s ease';
    }
    
    function touchMove(e) {
      if (isDragging) {
        const currentPosition = getPositionX(e);
        currentTranslate = prevTranslate + currentPosition - startPos;
      }
    }
    
    function animation() {
      setSliderPosition();
      if (isDragging) requestAnimationFrame(animation);
    }
    
    function setSliderPosition() {
      currentTranslate = Math.max(Math.min(currentTranslate, slideWidth), -slideWidth * (slideCount + 1));
      mobileSlider.style.transform = `translateX(${currentTranslate}px)`;
    }
    
    function getPositionX(e) {
      return e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
    }
  }
});
</script>