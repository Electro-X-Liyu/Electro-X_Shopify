{% schema %}
{
  "name": "简约图片画廊",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "图片展示"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "图片块",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "替代文本",
          "info": "图片描述(SEO优化用)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "简约图片画廊",
      "category": "图片展示",
      "blocks": [
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"}
      ]
    }
  ]
}
{% endschema %}

<div class="minimal-image-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container" style="margin-top: 18px;">
    <!-- 桌面端布局 -->
    <div class="gallery-track desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-container" style="width: calc({{ aspect_ratio }} * 400px); margin-right: 33px;" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <img src="{{ block.settings.image | img_url: '1000x' }}"
                   alt="{{ block.settings.alt_text | default: 'Image' }}"
                   class="grid-image"
                   loading="lazy"
                   width="1000"
                   height="{{ 1000 | divided_by: aspect_ratio | round }}">
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- 移动端布局 -->
    <div class="mobile-gallery-wrapper">
      <div class="gallery-track mobile-gallery">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="scroll-snap-align: start; flex: 0 0 calc(100% / {{ section.blocks.size }} - 33px * {{ section.blocks.size | minus: 1 | divided_by: section.blocks.size }}); margin-right: 33px;">
              <div class="image-container" style="height: 290px;">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Image' }}"
                       class="grid-image"
                       loading="lazy"
                       style="height: 100%; width: auto; max-width: none; object-fit: contain;">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
        <!-- 循环克隆第一组图片实现无缝滚动 -->
        {% for block in section.blocks limit: 5 %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="scroll-snap-align: start; flex: 0 0 calc(100% / {{ section.blocks.size }} - 33px * {{ section.blocks.size | minus: 1 | divided_by: section.blocks.size }}); margin-right: 33px;">
              <div class="image-container" style="height: 290px;">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Image' }}"
                       class="grid-image"
                       loading="lazy"
                       style="height: 100%; width: auto; max-width: none; object-fit: contain;">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.minimal-image-gallery {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

/* 桌面端布局样式 */
.desktop-gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
  margin: 0 -16.5px;
}

.image-container {
  position: relative;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  overflow: hidden;
}

.image-link {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
}

.grid-image {
  width: auto;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  object-position: center;
}

/* 移动端布局样式 */
.mobile-gallery-wrapper {
  position: relative;
  display: none;
  width: 100%;
}

.mobile-gallery {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  padding-bottom: 20px;
}

.mobile-gallery::-webkit-scrollbar {
  display: none;
}

.mobile-slide {
  flex-shrink: 0;
}

.mobile-slide .image-container {
  overflow: hidden;
  display: flex;
  justify-content: center;
  background: transparent;
}

/* 响应式切换 */
@media (max-width: 768px) {
  .desktop-gallery {
    display: none;
  }
  
  .mobile-gallery-wrapper {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
  }
}

@media (max-width: 480px) {
  .minimal-image-gallery {
    max-width: calc(100% - 20px);
    padding: 0 10px;
  }
  
  .section-title {
    font-size: 20px;
  }
  
  .mobile-slide {
    flex: 0 0 calc(100% / {{ section.blocks.size }} - 20px);
    margin-right: 20px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileGallery = document.querySelector('.mobile-gallery');
  
  if (mobileGallery && mobileGallery.children.length > 5) {
    // 自动滚动实现循环效果
    let scrollPosition = 0;
    const slideWidth = mobileGallery.children[0].offsetWidth + 33;
    const totalWidth = slideWidth * {{ section.blocks.size }};
    
    function autoScroll() {
      scrollPosition += 0.5; // 控制滚动速度
      
      if (scrollPosition >= totalWidth) {
        scrollPosition = 0;
        mobileGallery.scrollLeft = 0;
      } else {
        mobileGallery.scrollLeft = scrollPosition;
      }
      
      requestAnimationFrame(autoScroll);
    }
    
    // 触摸时暂停自动滚动
    mobileGallery.addEventListener('touchstart', function() {
      scrollPosition = mobileGallery.scrollLeft;
      cancelAnimationFrame(autoScroll);
    });
    
    // 触摸结束后恢复自动滚动
    mobileGallery.addEventListener('touchend', function() {
      requestAnimationFrame(autoScroll);
    });
    
    // 启动自动滚动
    autoScroll();
  }
});
</script>