{% schema %}
{
  "name": "完美图片画廊",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "图片展示"
    },
    {
      "type": "range",
      "id": "row_height",
      "label": "图片高度(px)",
      "min": 200,
      "max": 600,
      "step": 10,
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "图片块",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "替代文本",
          "info": "图片描述(SEO优化用)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "完美图片画廊",
      "category": "图片展示",
      "blocks": [
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"}
      ]
    }
  ]
}
{% endschema %}

<div class="perfect-image-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    <div class="gallery-track desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-container" style="width: calc({{ aspect_ratio }} * {{ section.settings.row_height }}px); margin-right: 33px;" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <div class="image-wrapper" style="height: {{ section.settings.row_height }}px;">
                <img src="{{ block.settings.image | img_url: '1000x' }}"
                     alt="{{ block.settings.alt_text | default: 'Image' }}"
                     class="grid-image"
                     loading="lazy"
                     width="1000"
                     height="{{ 1000 | divided_by: aspect_ratio | round }}">
              </div>
              <div class="image-hover-effect"></div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="mobile-gallery-wrapper">
      <div class="gallery-track mobile-gallery">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="scroll-snap-align: start; flex: 0 0 calc(100% / {{ section.blocks.size }} - 33px * {{ section.blocks.size | minus: 1 | divided_by: section.blocks.size }}); margin-right: 33px;">
              <div class="image-container" style="height: {{ section.settings.row_height | times: 0.8 }}px;">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <div class="image-wrapper">
                    <img src="{{ block.settings.image | img_url: '800x' }}"
                         alt="{{ block.settings.alt_text | default: 'Image' }}"
                         class="grid-image"
                         loading="lazy"
                         style="height: 100%; width: auto; max-width: none; object-fit: contain;">
                  </div>
                  <div class="image-hover-effect"></div>
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.perfect-image-gallery {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

.gallery-container {
  position: relative;
}

.gallery-track {
  display: flex;
  align-items: center;
  transition: transform 0.3s ease;
}

.desktop-gallery {
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
  margin: 0 -16.5px;
}

.image-container {
  position: relative;
  flex-shrink: 0;
  transition: transform 0.3s ease;
  overflow: visible; /* 关键修改：允许放大内容溢出 */
}

.image-link {
  display: block;
  position: relative;
  height: 100%;
}

.image-wrapper {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.grid-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  display: block;
  transition: transform 0.5s ease;
  transform-origin: center center; /* 从中心缩放 */
}

.image-hover-effect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.03);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-container:hover {
  transform: translateY(-5px);
  z-index: 2; /* 确保放大图片在上层 */
}

.image-container:hover .grid-image {
  transform: scale(1.1); /* 放大比例调整 */
}

.image-container:hover .image-hover-effect {
  opacity: 1;
}

/* 移动端样式 */
.mobile-gallery-wrapper {
  position: relative;
  display: none;
  width: 100%;
}

.mobile-gallery {
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  padding-bottom: 10px;
}

.mobile-gallery::-webkit-scrollbar {
  display: none;
}

.mobile-slide {
  flex-shrink: 0;
}

/* 响应式切换 */
@media (max-width: 768px) {
  .desktop-gallery {
    display: none;
  }
  
  .mobile-gallery-wrapper {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
  }
  
  /* 移动端放大时不裁切 */
  .mobile-slide .image-container {
    overflow: visible;
  }
  
  .mobile-slide .image-wrapper {
    overflow: visible;
  }
  
  .mobile-slide .grid-image {
    transform-origin: center center;
  }
}

@media (max-width: 480px) {
  .perfect-image-gallery {
    max-width: calc(100% - 20px);
    padding: 0 10px;
  }
  
  .section-title {
    font-size: 20px;
  }
  
  .mobile-slide {
    flex: 0 0 calc(100% / {{ section.blocks.size }} - 20px);
    margin-right: 20px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileGallery = document.querySelector('.mobile-gallery');
  
  if (mobileGallery) {
    let isDragging = false;
    let startPos = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let animationID;
    
    // 触摸事件处理
    mobileGallery.addEventListener('touchstart', touchStart);
    mobileGallery.addEventListener('touchend', touchEnd);
    mobileGallery.addEventListener('touchmove', touchMove);
    
    // 鼠标事件处理
    mobileGallery.addEventListener('mousedown', touchStart);
    mobileGallery.addEventListener('mouseup', touchEnd);
    mobileGallery.addEventListener('mouseleave', touchEnd);
    mobileGallery.addEventListener('mousemove', touchMove);
    
    // 防止拖动时选中文本
    mobileGallery.addEventListener('selectstart', e => e.preventDefault());
    
    function touchStart(e) {
      if (e.type === 'touchstart') {
        startPos = e.touches[0].clientX;
      } else {
        startPos = e.clientX;
        e.preventDefault();
      }
      
      isDragging = true;
      animationID = requestAnimationFrame(animation);
      mobileGallery.style.cursor = 'grabbing';
      mobileGallery.style.scrollBehavior = 'auto';
    }
    
    function touchEnd() {
      isDragging = false;
      cancelAnimationFrame(animationID);
      mobileGallery.style.cursor = 'grab';
    }
    
    function touchMove(e) {
      if (isDragging) {
        const currentPosition = e.type === 'touchmove' ? e.touches[0].clientX : e.clientX;
        currentTranslate = prevTranslate + currentPosition - startPos;
      }
    }
    
    function animation() {
      mobileGallery.style.transform = `translateX(${currentTranslate}px)`;
      if (isDragging) requestAnimationFrame(animation);
    }
  }
});
</script>