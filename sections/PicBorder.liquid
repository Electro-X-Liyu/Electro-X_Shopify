{% schema %}
{
  "name": "高级图片画廊",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "图片展示"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "图片块",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "替代文本",
          "info": "图片描述(SEO优化用)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "高级图片画廊",
      "category": "图片展示",
      "blocks": [
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"}
      ]
    }
  ]
}
{% endschema %}

<div class="advanced-image-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    <!-- 桌面端布局 -->
    <div class="gallery-track desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-container" style="width: calc({{ aspect_ratio }} * 400px); margin-right: 33px;" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <img src="{{ block.settings.image | img_url: '1000x' }}"
                   alt="{{ block.settings.alt_text | default: 'Image' }}"
                   class="grid-image"
                   loading="lazy"
                   width="1000"
                   height="{{ 1000 | divided_by: aspect_ratio | round }}"
                   style="height: 400px;">
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- 移动端布局 -->
    <div class="mobile-gallery-wrapper">
      <div class="gallery-track mobile-gallery">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide" style="scroll-snap-align: start; flex: 0 0 calc(100% / {{ section.blocks.size }} - 33px * {{ section.blocks.size | minus: 1 | divided_by: section.blocks.size }}); margin-right: 33px;">
              <div class="image-container" style="height: 290px;">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <img src="{{ block.settings.image | img_url: '800x' }}"
                       alt="{{ block.settings.alt_text | default: 'Image' }}"
                       class="grid-image"
                       loading="lazy"
                       style="height: 100%; width: auto; max-width: none; object-fit: contain;">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.advanced-image-gallery {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

/* 桌面端布局样式 */
.desktop-gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
  margin: 0 -16.5px;
}

.image-container {
  position: relative;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: transparent;
  overflow: hidden;
}

.image-link {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
}

.grid-image {
  width: auto;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  object-position: center;
  transition: transform 0.3s ease;
}

/* 移动端布局样式 */
.mobile-gallery-wrapper {
  position: relative;
  display: none;
  width: 100%;
}

.mobile-gallery {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  padding-bottom: 20px;
}

.mobile-gallery::-webkit-scrollbar {
  display: none;
}

.mobile-slide {
  flex-shrink: 0;
}

.mobile-slide .image-container {
  overflow: hidden;
  display: flex;
  justify-content: center;
  background: transparent;
}

/* 响应式切换 */
@media (max-width: 768px) {
  .desktop-gallery {
    display: none;
  }
  
  .mobile-gallery-wrapper {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
  }
}

@media (max-width: 480px) {
  .advanced-image-gallery {
    max-width: calc(100% - 20px);
    padding: 0 10px;
  }
  
  .section-title {
    font-size: 20px;
  }
  
  .mobile-slide {
    flex: 0 0 calc(100% / {{ section.blocks.size }} - 20px);
    margin-right: 20px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 移动端无限循环逻辑
  const mobileGallery = document.querySelector('.mobile-gallery');
  
  if (mobileGallery && mobileGallery.children.length > 0) {
    // 克隆第一个和最后一个元素实现无缝循环
    const firstItem = mobileGallery.children[0].cloneNode(true);
    const lastItem = mobileGallery.children[mobileGallery.children.length - 1].cloneNode(true);
    
    mobileGallery.insertBefore(lastItem, mobileGallery.children[0]);
    mobileGallery.appendChild(firstItem);
    
    let currentIndex = 1;
    const itemWidth = mobileGallery.children[0].offsetWidth + 33;
    const totalItems = mobileGallery.children.length;
    
    mobileGallery.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
    
    // 自动轮播
    let autoScrollInterval = setInterval(() => {
      currentIndex++;
      smoothScrollTo(currentIndex * itemWidth);
      
      if (currentIndex >= totalItems - 1) {
        setTimeout(() => {
          currentIndex = 1;
          mobileGallery.style.transition = 'none';
          mobileGallery.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
          setTimeout(() => {
            mobileGallery.style.transition = 'transform 0.5s ease';
          }, 50);
        }, 500);
      }
    }, 3000);
    
    function smoothScrollTo(position) {
      mobileGallery.style.transition = 'transform 0.5s ease';
      mobileGallery.style.transform = `translateX(-${position}px)`;
    }
    
    // 触摸滑动事件
    let isDragging = false;
    let startPos = 0;
    let currentTranslate = 0;
    let prevTranslate = -currentIndex * itemWidth;
    
    mobileGallery.addEventListener('touchstart', touchStart);
    mobileGallery.addEventListener('touchend', touchEnd);
    mobileGallery.addEventListener('touchmove', touchMove);
    
    mobileGallery.addEventListener('mousedown', touchStart);
    mobileGallery.addEventListener('mouseup', touchEnd);
    mobileGallery.addEventListener('mouseleave', touchEnd);
    mobileGallery.addEventListener('mousemove', touchMove);
    
    function touchStart(e) {
      clearInterval(autoScrollInterval);
      isDragging = true;
      startPos = e.type === 'touchstart' ? e.touches[0].clientX : e.clientX;
      mobileGallery.style.transition = 'none';
    }
    
    function touchEnd() {
      isDragging = false;
      const movedBy = currentTranslate - prevTranslate;
      
      if (movedBy < -50) {
        currentIndex++;
      }
      
      if (movedBy > 50) {
        currentIndex--;
      }
      
      // 边界检查
      if (currentIndex <= 0) {
        currentIndex = totalItems - 2;
      } else if (currentIndex >= totalItems - 1) {
        currentIndex = 1;
      }
      
      mobileGallery.style.transition = 'transform 0.5s ease';
      currentTranslate = -currentIndex * itemWidth;
      mobileGallery.style.transform = `translateX(${currentTranslate}px)`;
      prevTranslate = currentTranslate;
      
      // 重启自动轮播
      autoScrollInterval = setInterval(autoScroll, 3000);
    }
    
    function touchMove(e) {
      if (isDragging) {
        const currentPosition = e.type === 'touchmove' ? e.touches[0].clientX : e.clientX;
        currentTranslate = prevTranslate + currentPosition - startPos;
        mobileGallery.style.transform = `translateX(${currentTranslate}px)`;
      }
    }
    
    function autoScroll() {
      currentIndex++;
      smoothScrollTo(currentIndex * itemWidth);
      
      if (currentIndex >= totalItems - 1) {
        setTimeout(() => {
          currentIndex = 1;
          mobileGallery.style.transition = 'none';
          mobileGallery.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
          setTimeout(() => {
            mobileGallery.style.transition = 'transform 0.5s ease';
          }, 50);
        }, 500);
      }
    }
  }
});
</script>