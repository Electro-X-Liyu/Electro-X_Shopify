{% schema %}
{
  "name": "简洁图片画廊",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "标题",
      "default": "图片展示"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "图片块",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        },
        {
          "type": "url",
          "id": "link",
          "label": "链接"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "替代文本",
          "info": "图片描述(SEO优化用)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "简洁图片画廊",
      "category": "图片展示",
      "blocks": [
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"},
        {"type": "image_block"}
      ]
    }
  ]
}
{% endschema %}

<div class="clean-image-gallery" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="gallery-container">
    <!-- PC端布局 -->
    <div class="desktop-gallery">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          {% assign aspect_ratio = block.settings.image.aspect_ratio %}
          <div class="image-container" style="width: calc({{ aspect_ratio }} * 400px);" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="image-link">
              <img src="{{ block.settings.image | img_url: '800x' }}"
                   alt="{{ block.settings.alt_text | default: 'Image' }}"
                   class="grid-image"
                   loading="lazy"
                   width="800"
                   height="{{ 800 | divided_by: aspect_ratio | round }}"
                   style="height: 400px;">
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- 移动端布局 -->
    <div class="mobile-gallery-wrapper">
      <div class="mobile-gallery">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide">
              <div class="image-container">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <img src="{{ block.settings.image | img_url: '600x' }}"
                       alt="{{ block.settings.alt_text | default: 'Image' }}"
                       class="grid-image"
                       loading="lazy"
                       style="height: 290px; width: auto;">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
        <!-- 循环复制第一组图片实现无缝循环 -->
        {% for block in section.blocks limit: 5 %}
          {% if block.settings.image != blank %}
            {% assign aspect_ratio = block.settings.image.aspect_ratio %}
            <div class="mobile-slide">
              <div class="image-container">
                <a href="{{ block.settings.link | default: '#' }}" class="image-link">
                  <img src="{{ block.settings.image | img_url: '600x' }}"
                       alt="{{ block.settings.alt_text | default: 'Image' }}"
                       class="grid-image"
                       loading="lazy"
                       style="height: 290px; width: auto;">
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.clean-image-gallery {
  max-width: calc(100% - 40px);
  margin: 0 auto;
  padding: 0 20px;
}

.section-title {
  text-align: center;
  margin-bottom: 30px;
  font-size: 28px;
  color: #333;
  position: relative;
  padding-bottom: 15px;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 2px;
  background-color: #333;
}

/* PC端样式 */
.desktop-gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 33px;
}

.image-container {
  position: relative;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.grid-image {
  width: auto;
  max-width: 100%;
  object-fit: contain;
  object-position: center;
  transition: transform 0.3s ease;
}

/* 移动端样式 */
.mobile-gallery-wrapper {
  position: relative;
  display: none;
  width: 100%;
}

.mobile-gallery {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  padding-bottom: 10px;
}

.mobile-gallery::-webkit-scrollbar {
  display: none;
}

.mobile-slide {
  flex: 0 0 auto;
  scroll-snap-align: start;
  margin-right: 15px;
}

.mobile-slide .image-container {
  height: 290px;
  display: flex;
  justify-content: center;
}

/* 响应式切换 */
@media (min-width: 769px) {
  .mobile-gallery-wrapper {
    display: none !important;
  }
}

@media (max-width: 768px) {
  .desktop-gallery {
    display: none !important;
  }
  
  .mobile-gallery-wrapper {
    display: block;
  }
  
  .section-title {
    font-size: 24px;
    margin-bottom: 20px;
  }
}

@media (max-width: 480px) {
  .clean-image-gallery {
    max-width: calc(100% - 20px);
    padding: 0 10px;
  }
  
  .section-title {
    font-size: 20px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 移动端无限循环逻辑
  const mobileGallery = document.querySelector('.mobile-gallery');
  
  if (mobileGallery) {
    // 克隆前5个slide追加到末尾实现循环
    const slides = mobileGallery.querySelectorAll('.mobile-slide');
    const slideWidth = slides[0].offsetWidth + 15; // 包含margin
    
    // 滚动到中间位置（真实内容开始处）
    mobileGallery.scrollLeft = slideWidth * slides.length / 2;
    
    // 处理滚动结束事件
    mobileGallery.addEventListener('scroll', function() {
      if (mobileGallery.scrollLeft >= slideWidth * slides.length * 0.75) {
        mobileGallery.scrollLeft = slideWidth * (slides.length / 2 - 5);
      } else if (mobileGallery.scrollLeft <= slideWidth * (slides.length / 4)) {
        mobileGallery.scrollLeft = slideWidth * (slides.length / 2 + 5);
      }
    });
    
    // 添加惯性滑动效果
    let isDragging = false;
    let startPos = 0;
    let currentTranslate = 0;
    let prevTranslate = 0;
    let animationID;
    
    mobileGallery.addEventListener('touchstart', touchStart);
    mobileGallery.addEventListener('touchend', touchEnd);
    mobileGallery.addEventListener('touchmove', touchMove);
    
    function touchStart(e) {
      isDragging = true;
      startPos = e.touches[0].clientX;
      animationID = requestAnimationFrame(animation);
    }
    
    function touchEnd() {
      isDragging = false;
      cancelAnimationFrame(animationID);
    }
    
    function touchMove(e) {
      if (isDragging) {
        currentTranslate = prevTranslate + e.touches[0].clientX - startPos;
      }
    }
    
    function animation() {
      mobileGallery.scrollLeft -= currentTranslate - prevTranslate;
      prevTranslate = currentTranslate;
      if (isDragging) requestAnimationFrame(animation);
    }
  }
});
</script>