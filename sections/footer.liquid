<style>
  /* 自定义页脚样式 */
  .footer__content-top {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    margin-bottom: 30px;
  }

  .footer__newsletter-section {
    flex: 1;
    min-width: 300px;
    padding: 30px;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border-radius: 10px;
  }

  .footer__newsletter-title {
    font-size: 1.8rem;
    color: rgb(var(--color-button));
    margin-bottom: 20px;
    font-weight: 700;
  }

  .footer__newsletter-form {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-top: 25px;
  }

  .footer__form-group {
    flex: 1;
    min-width: 250px;
  }

  .footer__form-group input {
    width: 100%;
    padding: 15px;
    border: 2px solid rgba(var(--color-foreground), 0.1);
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .footer__form-group input:focus {
    outline: none;
    border-color: rgb(var(--color-button));
    box-shadow: 0 0 0 3px rgba(var(--color-button), 0.2);
  }

  .footer__subscribe-btn {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: none;
    padding: 15px 30px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    min-width: 150px;
  }

  .footer__subscribe-btn:hover {
    background-color: rgba(var(--color-button), 0.9);
    transform: translateY(-2px);
  }

  .footer__newsletter-description {
    color: rgba(var(--color-foreground), 0.7);
    margin-top: 15px;
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .footer__menu-section {
    flex: 2;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  .footer__menu-column {
    padding: 15px;
  }

  .footer__menu-title {
    font-size: 1.1rem;
    color: rgb(var(--color-button));
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid rgba(var(--color-foreground), 0.1);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer__menu-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__menu-links li {
    margin-bottom: 12px;
  }

  .footer__menu-links a {
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.9);
    transition: all 0.3s ease;
    display: block;
    padding: 5px 0;
    font-weight: 500;
  }

  .footer__menu-links a:hover {
    color: rgb(var(--color-button));
    padding-left: 5px;
  }

  /* 响应式调整 */
  @media (max-width: 750px) {
    .footer__content-top {
      flex-direction: column;
    }

    .footer__newsletter-form {
      flex-direction: column;
    }

    .footer__subscribe-btn {
      width: 100%;
    }
  }

  /* 覆盖原有样式 */
  .footer__content-bottom {
    padding-top: 0;
  }

  .footer__content-bottom-wrapper {
    justify-content: center;
  }
</style>

{%- liquid
  assign has_social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign has_social_icons = false
  endif

  if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
    assign brand_empty = true
  endif

  if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
    assign only_empty_brand = true
  endif
-%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content-top page-width">
    <!-- 左侧：电子邮件注册区 -->
    <div class="footer__newsletter-section">
      <h2 class="footer__newsletter-title">Fine the ELECTRO X</h2>
      {%- if section.settings.newsletter_enable -%}
        {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="footer__form-group">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'newsletter.label' | t }}"
              required
            >
          </div>
          <button
            type="submit"
            class="footer__subscribe-btn"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
            {{ 'newsletter.button_label' | t }}
          </button>
        {%- endform -%}
      {%- endif -%}
      <p class="footer__newsletter-description">
        {{ section.settings.newsletter_description }}
      </p>
    </div>

    <!-- 右侧：菜单区 -->
    <div class="footer__menu-section">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'custom_menu' -%}
            <div class="footer__menu-column" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer__menu-title">{{ block.settings.heading }}</h3>
              {%- endif -%}

              {%- if block.settings.menu != blank -%}
                <ul class="footer__menu-links">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="link link--text">
                        {{ link.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>

  <div
    class="footer__content-bottom{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__column footer__localization isolate">
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterLanguageLabel">
                  {{ 'localization.language_label' | t }}
                </h2>
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}
      </div>
      <div class="footer__column footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer__content-bottom-wrapper page-width{% if section.settings.enable_country_selector == false and section.settings.enable_language_selector == false %} footer__content-bottom-wrapper--center{% endif %}">
      <div class="footer__copyright caption">
        <small class="copyright__content"
          >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
        </small>
        <small class="copyright__content">{{ powered_by_link }}</small>
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "自定义页脚",
  "blocks": [
    {
      "type": "custom_menu",
      "name": "自定义菜单",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "菜单标题",
          "default": "菜单标题"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "选择菜单"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "电子邮件订阅设置"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "启用电子邮件订阅"
    },
    {
      "type": "richtext",
      "id": "newsletter_description",
      "label": "订阅描述文本",
      "default": "<p>订阅以获取产品更新、行业洞察和特别优惠</p>"
    },
    {
      "type": "header",
      "content": "语言和国家选择器"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": true,
      "label": "启用国家选择器"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": true,
      "label": "启用语言选择器"
    },
    {
      "type": "header",
      "content": "支付方式"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "显示支付方式图标"
    },
    {
      "type": "header",
      "content": "策略链接"
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": true,
      "label": "显示策略链接"
    },
    {
      "type": "header",
      "content": "间距设置"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上边距",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上内边距",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下内边距",
      "default": 36
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "custom_menu",
        "settings": {
          "heading": "产品",
          "menu": "footer"
        }
      },
      {
        "type": "custom_menu",
        "settings": {
          "heading": "社区",
          "menu": "footer"
        }
      },
      {
        "type": "custom_menu",
        "settings": {
          "heading": "关于我们",
          "menu": "footer"
        }
      },
      {
        "type": "custom_menu",
        "settings": {
          "heading": "支持",
          "menu": "footer"
        }
      }
    ]
  }
}
{% endschema %}
