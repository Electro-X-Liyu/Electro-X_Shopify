{% comment %} 移动端检测和优化脚本 {% endcomment %}
<script>
  (function() {
    // 检测是否为移动设备
    function isMobileDevice() {
      return window.innerWidth <= 749;
    }
    
    // 处理移动端轮播图
    function initMobileSlideshow() {
      const wrapper = document.querySelector('[data-mobile-slideshow]');
      
      if (!wrapper) return;
      
      if (isMobileDevice()) {
        // 移动端：显示并初始化
        wrapper.classList.add('loaded');
        
        // 优化移动端图片加载
        const images = wrapper.querySelectorAll('.mobile-slide-image');
        images.forEach((img, index) => {
          if (index > 0 && !img.loading) {
            img.loading = 'lazy';
          }
        });
        
        // 监听视口变化
        let resizeTimer;
        window.addEventListener('resize', function() {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(function() {
            if (!isMobileDevice()) {
              wrapper.style.display = 'none';
            } else {
              wrapper.style.display = '';
            }
          }, 250);
        });
      } else {
        // 桌面端：确保隐藏
        wrapper.style.display = 'none';
      }
    }
    
    // 文档加载完成后初始化
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileSlideshow);
    } else {
      initMobileSlideshow();
    }
    
    // 确保在Shopify主题编辑器中也正常工作
    if (window.Shopify && window.Shopify.designMode) {
      document.addEventListener('shopify:section:load', initMobileSlideshow);
      document.addEventListener('shopify:section:unload', initMobileSlideshow);
    }
  })();
</script>

