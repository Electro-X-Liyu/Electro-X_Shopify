{{ 'section-community.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .community-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .community-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 社区卡片样式 */
  .community-card {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* 移动端滑动样式 */
  @media screen and (max-width: 749px) {
    .community-list {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
    }
    
    .community-item {
      flex: 0 0 85%;
      scroll-snap-align: start;
      margin-right: 15px;
    }
  }
{%- endstyle -%}

<div class="community-section color-{{ section.settings.color_scheme }}">
  <div class="page-width community-section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="community-header center">
        <h2 class="community-title {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="community-subtitle">{{ section.settings.subtitle | escape }}</p>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <slider-component class="slider-mobile-gutter">
      <ul class="community-list grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
          id="Slider-{{ section.id }}"
          role="list">
        {%- for block in section.blocks -%}
          <li class="community-item grid__item slider__slide" {{ block.shopify_attributes }}>
            <div class="community-card">
              {%- if block.settings.image != blank -%}
                <div class="community-card__image-wrapper">
                  <div class="media media--{{ section.settings.image_ratio }}"
                       style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                    <img src="{{ block.settings.image | image_url: width: 800 }}"
                         alt="{{ block.settings.image.alt | escape }}"
                         loading="lazy"
                         width="{{ block.settings.image.width }}"
                         height="{{ block.settings.image.height }}"
                         class="community-card__image">
                  </div>
                </div>
              {%- endif -%}
              
              <div class="community-card__content">
                {%- if block.settings.title != blank -%}
                  <h3 class="community-card__title">{{ block.settings.title | escape }}</h3>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <div class="community-card__text rte">{{ block.settings.text }}</div>
                {%- endif -%}
                
                {%- if block.settings.link_label != blank -%}
                  <a href="{{ block.settings.link | default: '#' }}" 
                     class="community-card__link button button--secondary">
                    {{ block.settings.link_label | escape }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      <div class="slider-buttons no-js-hidden">
        <button type="button" class="slider-button slider-button--prev" aria-label="Previous slide">
          {{ 'icon-caret.svg' | inline_asset_content }}
        </button>
        <div class="slider-counter caption">
          <span class="slider-counter--current">1</span>
          <span> / </span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        </div>
        <button type="button" class="slider-button slider-button--next" aria-label="Next slide">
          {{ 'icon-caret.svg' | inline_asset_content }}
        </button>
      </div>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Community",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our Community",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "Meet the people behind our success",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "circle",
          "label": "Circle"
        }
      ],
      "default": "square",
      "label": "Image ratio"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Card border radius",
      "default": 12
    },
    {
      "type": "range",
      "id": "card_padding",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Card padding",
      "default": 20
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": true,
      "label": "Enable swipe on mobile"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Community member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Member name",
          "label": "Name"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Member description or role</p>",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_label",
          "default": "View profile",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community",
      "blocks": [
        {
          "type": "member"
        },
        {
          "type": "member"
        },
        {
          "type": "member"
        }
      ]
    }
  ]
}
{% endschema %}