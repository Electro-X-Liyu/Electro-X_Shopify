{% schema %}
{
  "name": "自适应双图悬停卡片",
  "settings": [
    {
      "type": "range",
      "id": "row_height",
      "label": "卡片高度 (px)",
      "min": 200,
      "max": 600,
      "step": 10,
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "dual_image_card",
      "name": "双图卡片",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "默认图片"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "悬停图片"
        },
        {
          "type": "url",
          "id": "card_link",
          "label": "卡片链接"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "自适应双图卡片",
      "category": "图片展示"
    }
  ]
}
{% endschema %}

<div class="adaptive-dual-cards" style="--row-height: {{ section.settings.row_height }}px;">
  {% for block in section.blocks %}
    {% if block.settings.image_1 %}
      {% assign aspect_ratio_1 = block.settings.image_1.aspect_ratio | default: 1 %}
      {% assign aspect_ratio_2 = block.settings.image_2.aspect_ratio | default: aspect_ratio_1 %}
      
      <div class="dual-card" 
           style="--card-width: calc(var(--row-height) * {{ aspect_ratio_1 }});"
           {{ block.shopify_attributes }}>
        <a href="{{ block.settings.card_link | default: '#' }}" class="card-link">
          <div class="image-container">
            <img src="{{ block.settings.image_1 | img_url: '800x' }}"
                 alt="{{ block.settings.image_1.alt | escape }}"
                 class="primary-img"
                 loading="lazy"
                 width="800"
                 height="{{ 800 | divided_by: aspect_ratio_1 | round }}">

            {% if block.settings.image_2 %}
              <img src="{{ block.settings.image_2 | img_url: '800x' }}"
                   alt="{{ block.settings.image_2.alt | escape }}"
                   class="hover-img"
                   loading="lazy"
                   width="800"
                   height="{{ 800 | divided_by: aspect_ratio_2 | round }}">
            {% endif %}
          </div>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
.adaptive-dual-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  padding: 15px;
}

.dual-card {
  flex: 0 0 auto;
  width: var(--card-width);
  height: var(--row-height);
  position: relative;
  transition: transform 0.3s ease;
  border-radius: 8px;
  overflow: hidden;
}

.card-link {
  display: block;
  width: 100%;
  height: 100%;
}

.image-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.primary-img,
.hover-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.5s ease, transform 0.5s ease;
}

.hover-img {
  opacity: 0;
}

.dual-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.dual-card:hover .primary-img {
  opacity: 0;
  transform: scale(1.05);
}

.dual-card:hover .hover-img {
  opacity: 1;
  transform: scale(1.02);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .adaptive-dual-cards {
    gap: 15px;
    padding: 10px;
  }
  
  .dual-card {
    width: calc(50% - 10px) !important; /* 移动端2列 */
    height: calc(var(--row-height) * 0.8) !important;
  }
}

@media (max-width: 480px) {
  .dual-card {
    width: 100% !important; /* 手机端单列 */
    height: calc(var(--row-height) * 0.7) !important;
  }
}
</style>