      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "text_style",
      "options": [
        {"value": "body", "label": "Body text"},
        {"value": "subtitle", "label": "Subtitle"}
      ],
      "default": "body",
      "label": "Text style"
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {"value": "primary", "label": "Primary"},
        {"value": "secondary", "label": "Secondary"}
