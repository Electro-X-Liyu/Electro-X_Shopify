      "label": "Mobile color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "desktop_color_scheme",
      "label": "Desktop color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "PC Page Width Settings"
    },
    {
      "type": "range",
      "id": "pc_margin_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin top",
