{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-related-products.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  /* 彻底隐藏所有价格元素 */
  .card-information__wrapper .price,
  .price .price-item,
  .price__sale,
  .price--on-sale .price__sale,
  .price__regular,
  .price-item--regular,
  .price-item--sale,
  .price__badge-sale,
  .price__badge-regular {
    display: none !important;
  }

  /* 卡片无背景设置 */
  .card-wrapper {
    background-color: transparent !important;
  }
  .card {
    background: transparent !important;
    box-shadow: none !important;
  }

  /* 图片容器设置 */
  .card__media {
    position: relative;
    overflow: hidden;
    padding-bottom: var(--media-padding-bottom);
  }

  /* 默认显示第二张图片 */
  .card__media .media--first {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
    transition: opacity 0.3s ease;
  }
  
  .card__media .media--second {
    opacity: 1;
    position: relative;
    z-index: 0;
    transition: opacity 0.3s ease;
  }
  
  /* PC端悬停效果 */
  @media screen and (min-width: 750px) {
    .card-wrapper:hover .card__media .media--first {
      opacity: 1;
    }
    .card-wrapper:hover .card__media .media--second {
      opacity: 0;
    }
  }

  /* 移动端设置 - 只显示第二张图片 */
  @media screen and (max-width: 749px) {
    .card__media .media--first {
      display: none !important;
    }
    .card__media .media--second {
      opacity: 1 !important;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient no-js-hidden">
  <product-recommendations class="related-products page-width section-{{ section.id }}-padding isolate" 
    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}&intent=related">
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
      <ul class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
        {% for recommendation in recommendations.products %}
          <li class="grid__item">
            {% render 'card-product',
              card_product: recommendation,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: true,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              show_price: false,
              show_quick_add: false,
              section_id: section.id
            %}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </product-recommendations>
</div>

{% if section.settings.image_shape == 'arch' %}
  {% render 'mask-arch' %}
{%- endif -%}

