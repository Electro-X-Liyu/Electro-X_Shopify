    <script>
        // 简单的样式控制功能
        document.addEventListener('DOMContentLoaded', function() {
            const marginLeftInput = document.getElementById('marginLeft');
            const marginRightInput = document.getElementById('marginRight');
            const columnGapInput = document.getElementById('columnGap');
            const imageMarginInput = document.getElementById('imageMargin');
            const pageWidth = document.querySelector('.page-width');
            const imageWrappers = document.querySelectorAll('.multicolumn-card__image-wrapper');
            const multicolumnList = document.querySelector('.multicolumn-list');
            const items = document.querySelectorAll('.multicolumn-list__item');
            
            // 更新样式函数
            function updateStyles() {
                // 更新页面宽度容器的外边距
                pageWidth.style.marginLeft = marginLeftInput.value;
                pageWidth.style.marginRight = marginRightInput.value;
                
                // 更新图片容器的边距
                imageWrappers.forEach(wrapper => {
                    wrapper.style.marginLeft = imageMarginInput.value;
                    wrapper.style.marginRight = imageMarginInput.value;
                });
                
                // 更新列间隔
                const gapValue = columnGapInput.value;
                const gapNum = parseInt(gapValue);
                
                if (!isNaN(gapNum)) {
                    multicolumnList.style.margin = `0 -${gapNum/2}px`;
                    items.forEach(item => {
                        item.style.margin = `${gapNum/2}px`;
                        item.style.flexBasis = `calc(33.333% - ${gapNum}px)`;
                    });
                }
            }
            
            // 添加输入事件监听
            marginLeftInput.addEventListener('input', updateStyles);
            marginRightInput.addEventListener('input', updateStyles);
            columnGapInput.addEventListener('input', updateStyles);
            imageMarginInput.addEventListener('input', updateStyles);
            
            // 复制代码功能
            document.getElementById('copyCode').addEventListener('click', function() {
                const code = document.querySelector('pre').innerText;
                navigator.clipboard.writeText(code).then(() => {
                    this.innerHTML = '<i class="fas fa-check"></i>已复制';
                    setTimeout(() => {
                        this.innerHTML = '<i class="fas fa-copy"></i>复制代码';
                    }, 2000);
                });
            });
        });
    </script>
