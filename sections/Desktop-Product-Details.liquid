{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Mobile hiding */
  @media screen and (max-width: 749px) {
    .product-details {
      display: none !important;
    }
  }

  /* Full width modifications */
  .product-details .multirow__inner {
    max-width: 100% !important;
    padding-left: 0 !important;
    padding-right: 0 !important;    
    row-gap: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  .image-with-text__grid {
    max-width: 100% !important;
  }

  .product-details .image-with-text__media {
    margin: 0 !important;
    padding: 0 !important;
    position: relative;
  }

  /* 轮播容器样式 */
  .image-slider {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .slider__slides {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .slider__slide {
    flex: 0 0 100%;
    height: 100%;
    min-height: 1px; /* 防止空内容折叠 */
  }

  .slider__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* 轮播导航按钮 */
  .slider__controls {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 2;
  }

  .slider__button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: background-color 0.3s ease;
    padding: 0;
  }

  .slider__button.active {
    background: rgba(255, 255, 255, 1);
  }

  /* 轮播箭头导航 */
  .slider__arrows {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    transform: translateY(-50%);
    z-index: 2;
    pointer-events: none;
  }

  .slider__arrow {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    pointer-events: auto;
  }

  .slider__arrow:hover {
    background: rgba(255, 255, 255, 1);
  }

  .slider__arrow svg {
    width: 20px;
    height: 20px;
  }

  /* 自动轮播指示器 */
  .slider__autoplay-indicator {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 2;
  }

  .autoplay-toggle {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    padding: 0;
  }

  .autoplay-toggle:hover {
    background: rgba(255, 255, 255, 1);
  }

  /* 单张图片时隐藏导航 */
  .slider-single .slider__controls,
  .slider-single .slider__arrows,
  .slider-single .slider__autoplay-indicator {
    display: none !important;
  }

  /* 自定义内容区域样式 */
  .product-details-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 40px;
  }

  .product-details-text {
    flex: 1;
  }

  .product-details-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-top: auto;
  }

  .product-details-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  /* 取消副标题全大写和letter-spacing */
  .image-with-text__text--caption {
    text-transform: none !important;
    letter-spacing: normal !important;
  }

  /* 按钮样式 - 增加特异性 */
  .product-details .image-with-text__content .button,
  .product-details .image-with-text__content a.button {
    min-height: calc(2.5rem + var(--buttons-border-width) * 2) !important;
    padding-left: 20px !important;
    padding-right: 20px !important;
    border-radius: 10px !important;
    margin-top: 30px !important;
  }

  /* 内容区域padding */
  .image-with-text__content.image-with-text__content--middle.image-with-text__content--desktop-left.image-with-text__content--mobile-left.image-with-text__content--large.content-container.background-transparent {
    padding: 60px !important;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* 自定义文字样式 */
  {%- for block in section.blocks -%}
    /* 标题样式 */
    #block-{{ block.id }} .image-with-text__heading {
      {%- if block.settings.heading_font_weight != 'default' -%}
        font-weight: {{ block.settings.heading_font_weight }} !important;
      {%- endif -%}
      {%- if block.settings.heading_font_size != 'default' -%}
        font-size: {{ block.settings.heading_font_size }}px !important;
      {%- endif -%}
      {%- if block.settings.heading_color != 'rgba(0,0,0,0)' -%}
        color: {{ block.settings.heading_color }} !important;
      {%- endif -%}
    }

    /* 副标题样式 */
    #block-{{ block.id }} .image-with-text__text--caption {
      {%- if block.settings.caption_font_weight != 'default' -%}
        font-weight: {{ block.settings.caption_font_weight }} !important;
      {%- endif -%}
      {%- if block.settings.caption_font_size != 'default' -%}
        font-size: {{ block.settings.caption_font_size }}px !important;
      {%- endif -%}
      {%- if block.settings.caption_color != 'rgba(0,0,0,0)' -%}
        color: {{ block.settings.caption_color }} !important;
      {%- endif -%}
      margin-top: 20px !important;
      margin-bottom: 15px !important;
    }

    /* 正文样式 */
    #block-{{ block.id }} .image-with-text__text.rte {
      {%- if block.settings.text_font_weight != 'default' -%}
        font-weight: {{ block.settings.text_font_weight }} !important;
      {%- endif -%}
      {%- if block.settings.text_font_size != 'default' -%}
        font-size: {{ block.settings.text_font_size }}px !important;
      {%- endif -%}
      {%- if block.settings.text_color != 'rgba(0,0,0,0)' -%}
        color: {{ block.settings.text_color }} !important;
      {%- endif -%}
    }

    /* 按钮样式 */
    #block-{{ block.id }} .image-with-text__content .button,
    #block-{{ block.id }} .image-with-text__content a.button {
      {%- if block.settings.button_font_weight != 'default' -%}
        font-weight: {{ block.settings.button_font_weight }} !important;
      {%- endif -%}
      {%- if block.settings.button_font_size != 'default' -%}
        font-size: {{ block.settings.button_font_size }}px !important;
      {%- endif -%}
      {%- if block.settings.button_text_color != 'rgba(0,0,0,0)' -%}
        color: {{ block.settings.button_text_color }} !important;
      {%- endif -%}
      {%- if block.settings.button_bg_color != 'rgba(0,0,0,0)' -%}
        background-color: {{ block.settings.button_bg_color }} !important;
      {%- endif -%}
      {%- if block.settings.button_border_color != 'rgba(0,0,0,0)' -%}
        border-color: {{ block.settings.button_border_color }} !important;
      {%- endif -%}
      border-radius: 10px !important;
    }

    /* 自定义图片样式 */
    #block-{{ block.id }} .product-details-image {
      border-radius: {{ block.settings.image_border_radius }}px;
    }

    /* 轮播图片自适应高度 */
    #block-{{ block.id }} .image-with-text__media {
      {%- if section.settings.image_height == 'adapt' and block.settings.slider_image_1 != blank -%}
        padding-bottom: {{ 1 | divided_by: block.settings.slider_image_1.aspect_ratio | times: 100 }}%;
      {%- endif -%}
    }
  {%- endfor -%}
{%- endstyle -%}

{%- liquid
  if section.settings.row_color_scheme == section.settings.section_color_scheme
    assign no_content_background = true
  endif

  if settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0
    assign no_content_styles = true
  endif

  if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0
    assign borders_class = ' collapse-borders'
  endif

  if no_content_background and no_content_styles
    assign padding_class = ' collapse-padding'
  endif

  unless no_content_background and no_content_styles
    assign corners_class = ' collapse-corners'
  endunless
-%}

<div class="product-details multirow section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="multirow__inner">
    {%- for block in section.blocks -%}
      {%- liquid
        # 计算轮播图片数量
        assign slider_images_count = 0
        for i in (1..5)
          assign image_setting = 'slider_image_' | append: i
          if block.settings[image_setting] != blank
            assign slider_images_count = slider_images_count | plus: 1
          endif
        endfor
        
        # 确定是否为单张图片
        assign is_single_image = false
        if slider_images_count <= 1
          assign is_single_image = true
        endif
      -%}
      
      <div
        id="block-{{ block.id }}"
        class="image-with-text isolate{{ borders_class }}{{ corners_class }}{{ padding_class }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {{ block.shopify_attributes }}
      >
        <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}" style="margin-top: 1px !important; margin-bottom: 1px !important;">
          <!-- 左侧图片轮播 -->
          <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
            <div
              class="image-with-text__media image-with-text__media--{{ section.settings.image_height }} gradient color-{{ section.settings.row_color_scheme }} global-media-settings{% if block.settings.slider_image_1 != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
            >
              <div class="image-slider {% if is_single_image %}slider-single{% endif %}" 
                   data-slider 
                   data-autoplay="{{ section.settings.auto_rotate }}" 
                   data-speed="{{ section.settings.auto_rotate_speed }}"
                   data-slides-count="{{ slider_images_count }}">
                <div class="slider__slides" data-slides>
                  {%- for i in (1..5) -%}
                    {%- assign image_setting = 'slider_image_' | append: i -%}
                    {%- assign slide_image = block.settings[image_setting] -%}
                    {%- if slide_image != blank -%}
                      <div class="slider__slide" data-slide>
                        {%- capture sizes -%}
                          (min-width: {{ settings.page_width }}px) 50vw,
                          (min-width: 750px) 50vw, calc(100vw - 30px)
                        {%- endcapture -%}
                        {{
                          slide_image
                          | image_url: width: 1500
                          | image_tag: 
                            sizes: sizes, 
                            widths: '165, 360, 535, 750, 1070, 1500', 
                            loading: 'lazy',
                            alt: slide_image.alt | escape
                        }}
                      </div>
                    {%- endif -%}
                  {%- endfor -%}
                  
                  {%- if slider_images_count == 0 -%}
                    <div class="slider__slide" data-slide>
                      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>

                {%- unless is_single_image -%}
                  <!-- 轮播导航 -->
                  <div class="slider__controls" data-controls>
                    {%- for i in (1..5) -%}
                      {%- assign image_setting = 'slider_image_' | append: i -%}
                      {%- if block.settings[image_setting] != blank -%}
                        <button class="slider__button{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>

                  <!-- 箭头导航 -->
                  <div class="slider__arrows">
                    <button class="slider__arrow slider__arrow--prev" data-prev aria-label="Previous slide">
                      <svg viewBox="0 0 24 24" fill="none">
                        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                    <button class="slider__arrow slider__arrow--next" data-next aria-label="Next slide">
                      <svg viewBox="0 0 24 24" fill="none">
                        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                  </div>

                  <!-- 自动轮播指示器 -->
                  {%- if section.settings.auto_rotate -%}
                    <div class="slider__autoplay-indicator">
                      <button class="autoplay-toggle" data-autoplay-toggle aria-label="Pause slideshow">
                        <svg viewBox="0 0 24 24" fill="none">
                          <rect x="6" y="4" width="4" height="16" fill="currentColor"/>
                          <rect x="14" y="4" width="4" height="16" fill="currentColor"/>
                        </svg>
                      </button>
                    </div>
                  {%- endif -%}
                {%- endunless -%}
              </div>
            </div>
          </div>
          
          <!-- 右侧自定义内容区域 -->
          <div class="image-with-text__text-item grid__item">
            <div class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.image_height }} content-container{% unless no_content_background and no_content_styles %} gradient color-{{ section.settings.row_color_scheme }}{% else %} background-transparent{% endunless %}" style="border-right-style: solid !important; border-right-width: 0px !important; padding-right: 70px !important;">
              <div class="product-details-content">
                <!-- 顶部自定义文字区域 -->
                <div class="product-details-text">
                  {%- if block.settings.heading -%}
                    <h2 class="image-with-text__heading {{ section.settings.heading_size }} rte">
                      {{ block.settings.heading }}
                    </h2>
                  {%- endif -%}
                  {%- if block.settings.caption -%}
                    <p class="image-with-text__text image-with-text__text--caption">
                      {{ block.settings.caption | escape }}
                    </p>
                  {%- endif -%}
                  {%- if block.settings.text -%}
                    <div class="image-with-text__text rte {{ section.settings.text_style }}">{{ block.settings.text }}</div>
                  {%- endif -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button button--{{ section.settings.button_style }}"
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                </div>
                
                <!-- 底部两张自定义图片 -->
                <div class="product-details-images">
                  {%- if block.settings.bottom_image_1 != blank -%}
                    <div class="product-details-image-container">
                      {{
                        block.settings.bottom_image_1
                        | image_url: width: 600
                        | image_tag: class: 'product-details-image', loading: 'lazy', alt: block.settings.bottom_image_1.alt | escape
                      }}
                    </div>
                  {%- else -%}
                    <div class="product-details-image-container">
                      {{ 'image' | placeholder_svg_tag: 'product-details-image placeholder-svg' }}
                    </div>
                  {%- endif -%}
                  
                  {%- if block.settings.bottom_image_2 != blank -%}
                    <div class="product-details-image-container">
                      {{
                        block.settings.bottom_image_2
                        | image_url: width: 600
                        | image_tag: class: 'product-details-image', loading: 'lazy', alt: block.settings.bottom_image_2.alt | escape
                      }}
                    </div>
                  {%- else -%}
                    <div class="product-details-image-container">
                      {{ 'image' | placeholder_svg_tag: 'product-details-image placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliders = document.querySelectorAll('[data-slider]');
  
  sliders.forEach(slider => {
    const slides = slider.querySelector('[data-slides]');
    const slidesCount = parseInt(slider.dataset.slidesCount) || slides.children.length;
    const buttons = slider.querySelectorAll('[data-index]');
    const prevButton = slider.querySelector('[data-prev]');
    const nextButton = slider.querySelector('[data-next]');
    const autoplayToggle = slider.querySelector('[data-autoplay-toggle]');
    
    // 如果只有一张图片，不初始化轮播功能
    if (slidesCount <= 1) return;
    
    let currentSlide = 0;
    let autoplayInterval;
    const autoplay = slider.dataset.autoplay === 'true';
    const speed = parseInt(slider.dataset.speed) || 5000;
    let isPlaying = autoplay;
    
    function goToSlide(index) {
      currentSlide = index;
      if (slides) {
        slides.style.transform = `translateX(-${currentSlide * 100}%)`;
      }
      
      // 更新按钮状态
      buttons.forEach((button, i) => {
        if (button) {
          button.classList.toggle('active', i === currentSlide);
        }
      });
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % slidesCount;
      goToSlide(currentSlide);
    }
    
    function prevSlide() {
      currentSlide = (currentSlide - 1 + slidesCount) % slidesCount;
      goToSlide(currentSlide);
    }
    
    // 按钮点击事件
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const index = parseInt(button.dataset.index);
        goToSlide(index);
        resetAutoplay();
      });
    });
    
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        prevSlide();
        resetAutoplay();
      });
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        nextSlide();
        resetAutoplay();
      });
    }
    
    // 自动轮播
    function startAutoplay() {
      if (isPlaying && slidesCount > 1) {
        stopAutoplay(); // 先清除可能存在的旧定时器
        autoplayInterval = setInterval(nextSlide, speed);
        updateAutoplayButton(true);
      }
    }
    
    function stopAutoplay() {
      clearInterval(autoplayInterval);
      updateAutoplayButton(false);
    }
    
    function resetAutoplay() {
      if (isPlaying) {
        stopAutoplay();
        startAutoplay();
      }
    }
    
    function updateAutoplayButton(playing) {
      if (!autoplayToggle) return;
      
      if (playing) {
        autoplayToggle.innerHTML = `
          <svg viewBox="0 0 24 24" fill="none">
            <rect x="6" y="4" width="4" height="16" fill="currentColor"/>
            <rect x="14" y="4" width="4" height="16" fill="currentColor"/>
          </svg>
        `;
        autoplayToggle.setAttribute('aria-label', 'Pause slideshow');
      } else {
        autoplayToggle.innerHTML = `
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M8 5V19L19 12L8 5Z" fill="currentColor"/>
          </svg>
        `;
        autoplayToggle.setAttribute('aria-label', 'Play slideshow');
      }
    }
    
    // 自动轮播切换
    if (autoplayToggle) {
      autoplayToggle.addEventListener('click', () => {
        isPlaying = !isPlaying;
        if (isPlaying) {
          startAutoplay();
        } else {
          stopAutoplay();
        }
      });
    }
    
    // 鼠标悬停暂停
    slider.addEventListener('mouseenter', stopAutoplay);
    slider.addEventListener('mouseleave', () => {
      if (isPlaying) startAutoplay();
    });
    
    // 初始化
    if (slidesCount > 1) {
      startAutoplay();
    }
    
    // 清理函数
    slider.cleanup = function() {
      stopAutoplay();
      if (prevButton) prevButton.removeEventListener('click', prevSlide);
      if (nextButton) nextButton.removeEventListener('click', nextSlide);
      if (autoplayToggle) autoplayToggle.removeEventListener('click', arguments.callee);
    };
  });
  
  // 页面卸载时清理
  window.addEventListener('beforeunload', function() {
    sliders.forEach(slider => {
      if (slider.cleanup) slider.cleanup();
    });
  });
});
</script>

