{{ 'section-community-ambassador.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .ambassador-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .ambassador-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 图片自适应容器 */
  .ambassador-card__image-container {
    width: 100%;
    overflow: hidden;
  }

  .ambassador-card__image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* 移动端滑动样式 */
  @media screen and (max-width: 749px) {
    .ambassador-list {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 15px;
      gap: 15px;
    }
    
    .ambassador-item {
      flex: 0 0 75%;
      scroll-snap-align: start;
    }

    /* 移动端姓名字号 */
    .ambassador-name {
      margin-top: 12px;
      font-size: {{ section.settings.font_size_mobile | at_least: 9 }}px;
      text-align: center;
    }
  }

  /* 桌面端网格布局 */
  @media screen and (min-width: 750px) {
    .ambassador-list {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: {{ section.settings.grid_gap }}px;
    }

    /* 桌面端姓名字号 */
    .ambassador-name {
      margin-top: 12px;
      font-size: {{ section.settings.font_size_desktop | at_least: 9 }}px;
      text-align: center;
    }
  }
{%- endstyle -%}

<div class="ambassador-section">
  <div class="page-width ambassador-section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <h2 class="ambassador-title center {{ section.settings.heading_size }}">
        {{ section.settings.title | escape }}
      </h2>
    {%- endunless -%}

    <div class="ambassador-list">
      {%- for block in section.blocks -%}
        <div class="ambassador-item" {{ block.shopify_attributes }}>
          <div class="ambassador-card">
            {%- if block.settings.image != blank -%}
              <div class="ambassador-card__image-container">
                {{ block.settings.image | image_url: width: 800 | image_tag:
                  loading: 'lazy',
                  class: 'ambassador-card__image',
                  alt: block.settings.title | escape
                }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="ambassador-name">{{ block.settings.title | escape }}</h3>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Community Ambassador",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our Ambassadors",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Desktop columns"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Column spacing",
      "default": 20
    },
    {
      "type": "header",
      "content": "Font Settings"
    },
    {
      "type": "range",
      "id": "font_size_desktop",
      "min": 9,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Desktop font size",
      "default": 18
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "min": 9,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Mobile font size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "ambassador",
      "name": "Ambassador",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Will display in original aspect ratio"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Ambassador Name",
          "label": "Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community Ambassador",
      "blocks": [
        { "type": "ambassador" },
        { "type": "ambassador" },
        { "type": "ambassador" },
        { "type": "ambassador" }
      ]
    }
  ]
}
{% endschema %}