{{ 'component-related-products.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .related-products-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .related-products-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Image container */
  .related-products__card .media {
    padding-bottom: 100%;
    position: relative;
    overflow: hidden;
  }

  .related-products__card .media img {
    position: absolute;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  /* Mobile slider */
  @media screen and (max-width: 749px) {
    .related-products__list {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 1rem;
      margin-bottom: -1rem;
      column-gap: 1.5rem;
    }
    
    .related-products__item {
      flex: 0 0 75%;
      scroll-snap-align: start;
    }
  }

  /* Desktop grid */
  @media screen and (min-width: 750px) {
    .related-products__list {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      column-gap: {{ section.settings.column_gap }}px;
      row-gap: {{ section.settings.row_gap }}px;
    }
  }

  /* Title */
  .related-products__title {
    margin: 0.5rem 0 0;
    font-size: calc(var(--font-heading-scale) * 1.4rem);
    text-align: center;
  }
{%- endstyle -%}

<div class="related-products color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width related-products-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }} text-center">
        {{ section.settings.title }}
      </h2>
    {%- endunless -%}

    <div class="related-products__list">
      {%- for block in section.blocks -%}
        <div class="related-products__item" {{ block.shopify_attributes }}>
          <div class="related-products__card card">
            {%- if block.settings.image != blank -%}
              <div class="related-products__card-media media media--transparent">
                {{ block.settings.image | image_url: width: 800 | image_tag:
                  loading: 'lazy',
                  class: 'motion-reduce',
                  alt: block.settings.title | escape
                }}
              </div>
            {%- else -%}
              <div class="related-products__card-media media media--transparent">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="related-products__title">{{ block.settings.title | escape }}</h3>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

