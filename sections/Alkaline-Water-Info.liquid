{%- style -%}
  /* 保持原有的基础样式 */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 产品信息行间距优化 */
  #ProductInfo-{{ section.id }} {
    --product-info-spacing: 16px; /* 基础间距变量 */
  }

  /* 价格模块 */
  #price-{{ section.id }} {
    margin-bottom: var(--product-info-spacing);
  }

  /* 变体选择器 */
  .product-form__input {
    margin-bottom: var(--product-info-spacing);
  }

  /* 数量选择器 */
  #Quantity-Form-{{ section.id }} {
    margin: var(--product-info-spacing) 0;
  }

  /* 购买按钮 */
  .product-form__buttons {
    margin-top: calc(var(--product-info-spacing) * 1.5);
  }

  /* 移动端调整 */
  @media (max-width: 749px) {
    #ProductInfo-{{ section.id }} {
      --product-info-spacing: 12px;
    }
  }
{%- endstyle -%}