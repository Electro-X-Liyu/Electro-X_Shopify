{% schema %}
{
  "name": "Alkaline Water Info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Featured product"
    },
    {
      "type": "range",
      "id": "row_height",
      "label": "Image cards height (px)",
      "min": 200,
      "max": 600,
      "step": 10,
      "default": 400
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "options": [
        {
          "value": "image_left",
          "label": "Image left"
        },
        {
          "value": "image_right",
          "label": "Image right"
        }
      ],
      "default": "image_left",
      "label": "Desktop layout"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "dual_image_card",
      "name": "Image Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Default image"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Hover image"
        },
        {
          "type": "url",
          "id": "card_link",
          "label": "Card link"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image card"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alkaline Water Info",
      "blocks": [
        {
          "type": "dual_image_card"
        },
        {
          "type": "dual_image_card"
        }
      ]
    }
  ]
}
{% endschema %}

{%- liquid
  assign product = section.settings.product
  if product == null
    assign placeholder = true
  endif
-%}

{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}

<style>
  .alkaline-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .alkaline-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .alkaline-container {
    display: flex;
    flex-direction: column;
    gap: 30px;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .alkaline-grid {
    display: grid;
    gap: 30px;
  }

  @media screen and (min-width: 990px) {
    .alkaline-grid {
      grid-template-columns: {% if section.settings.desktop_layout == 'image_left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
      align-items: center;
    }
    
    .alkaline-product-media {
      order: {% if section.settings.desktop_layout == 'image_left' %}1{% else %}2{% endif %};
    }
    
    .alkaline-product-info {
      order: {% if section.settings.desktop_layout == 'image_left' %}2{% else %}1{% endif %};
    }
  }

  /* Dual Image Cards Grid */
  .alkaline-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 30px;
  }

  .dual-image-card {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
    height: {{ section.settings.row_height }}px;
  }

  .dual-image-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .primary-img,
  .hover-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s ease;
  }

  .hover-img {
    opacity: 0;
  }

  .dual-image-card:hover .primary-img {
    opacity: 0;
  }

  .dual-image-card:hover .hover-img {
    opacity: 1;
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 100%);
    color: white;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .alkaline-cards-grid {
      grid-template-columns: 1fr;
    }
    
    .dual-image-card {
      height: {{ section.settings.row_height | times: 0.8 }}px;
    }
  }
</style>

<div class="alkaline-section-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="alkaline-container">
    <div class="alkaline-grid">
      <div class="alkaline-product-media">
        {%- unless placeholder -%}
          {% render 'product-media-gallery', product: product, limit: 1 %}
        {%- else -%}
          <div class="product-media-container">
            {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endunless -%}
      </div>
      
      <div class="alkaline-product-info">
        <section id="ProductInfo-{{ section.id }}">
          {%- assign product_form_id = 'product-form-' | append: section.id -%}
          
          {%- unless placeholder -%}
            <h2 class="product__title h1">
              {{ product.title | escape }}
            </h2>
            
            <div id="price-{{ section.id }}" role="status">
              {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'price--large' -%}
            </div>
            
            <div class="product__description rte">
              {{ product.description }}
            </div>
            
            {%- render 'buy-buttons', product: product, product_form_id: product_form_id, section_id: section.id -%}
          {%- else -%}
            <h2 class="product__title h1">
              {{ 'onboarding.product_title' | t }}
            </h2>
            <div class="product__description rte">
              {{ 'onboarding.product_description' | t }}
            </div>
          {%- endunless -%}
        </section>
      </div>
    </div>
    
    {% if section.blocks.size > 0 %}
      <div class="alkaline-cards-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'dual_image_card' %}
              {% if block.settings.image_1 %}
                {% assign aspect_ratio = block.settings.image_1.aspect_ratio %}
                <div class="dual-image-card" {{ block.shopify_attributes }}>
                  <a href="{{ block.settings.card_link | default: '#' }}" class="card-link">
                    <div class="image-container">
                      <img src="{{ block.settings.image_1 | img_url: '800x' }}" 
                           alt="{{ block.settings.heading | escape }}"
                           class="primary-img"
                           loading="lazy"
                           width="800"
                           height="{{ 800 | divided_by: aspect_ratio | round }}">
                      
                      {% if block.settings.image_2 %}
                        <img src="{{ block.settings.image_2 | img_url: '800x' }}" 
                             alt="{{ block.settings.heading | escape }}"
                             class="hover-img"
                             loading="lazy"
                             width="800"
                             height="{{ 800 | divided_by: aspect_ratio | round }}">
                      {% endif %}
                    </div>
                    
                    <div class="card-content">
                      <h3>{{ block.settings.heading }}</h3>
                      {% if block.settings.description %}
                        <div class="rte">{{ block.settings.description }}</div>
                      {% endif %}
                    </div>
                  </a>
                </div>
              {% endif %}
            
            {% when 'text' %}
              <div class="text-block" {{ block.shopify_attributes }}>
                {% if block.settings.heading %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.text %}
                  <div class="rte">{{ block.settings.text }}</div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- if first_3d_model -%}
  <script type="application/json" id="ProductJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script src="{{ 'product-model.js' | asset_url }}" defer></script>
{%- endif -%}