{%- liquid
  assign product = section.settings.product
  if product == null
    assign placeholder = true
  endif
-%}

{% schema %}
{
  "name": "Alkaline Water Info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "选择产品"
    },
    {
      "type": "header",
      "content": "双图卡片设置"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "图片高度 (px)",
      "min": 300,
      "max": 800,
      "step": 10,
      "default": 500
    },
    {
      "type": "checkbox",
      "id": "enable_hover",
      "label": "启用悬停切换",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "custom_image_1",
      "label": "自定义主图"
    },
    {
      "type": "image_picker",
      "id": "custom_image_2",
      "label": "自定义悬停图"
    },
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "PC端布局顺序",
      "options": [
        {
          "value": "image_left",
          "label": "图片在左"
        },
        {
          "value": "image_right",
          "label": "图片在右"
        }
      ],
      "default": "image_left"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "配色方案",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "间距设置"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上间距",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下间距",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "标题",
      "limit": 1
    },
    {
      "type": "price",
      "name": "价格",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "变体选择器",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "picker_type",
          "options": [
            {
              "value": "dropdown",
              "label": "下拉菜单"
            },
            {
              "value": "button",
              "label": "按钮组"
            }
          ],
          "default": "button",
          "label": "选择器类型"
        }
      ]
    },
    {
      "type": "quantity_selector",
      "name": "数量选择器",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "购买按钮",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_dynamic_checkout",
          "default": true,
          "label": "显示动态结账按钮"
        }
      ]
    },
    {
      "type": "description",
      "name": "描述",
      "limit": 1
    },
    {
      "type": "custom_text",
      "name": "自定义文本",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "文本内容",
          "default": "<p>自定义文本内容</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Alkaline Water Info",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "price"
        },
        {
          "type": "variant_picker"
        },
        {
          "type": "quantity_selector"
        },
        {
          "type": "buy_buttons"
        }
      ]
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 双图卡片样式 */
  .alkaline-dual-card {
    position: relative;
    transition: transform 0.3s ease;
  }

  .alkaline-image-container {
    position: relative;
    width: 100%;
    height: {{ section.settings.image_height }}px;
    overflow: hidden;
  }

  .alkaline-primary-image,
  .alkaline-hover-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: opacity 0.5s ease;
  }

  .alkaline-hover-image {
    opacity: 0;
  }

  {% if section.settings.enable_hover %}
    .alkaline-dual-card:hover .alkaline-primary-image {
      opacity: 0;
    }
    .alkaline-dual-card:hover .alkaline-hover-image {
      opacity: 1;
    }
  {% endif %}

  /* 响应式布局 */
  .alkaline-grid {
    display: grid;
    gap: 3rem;
  }

  @media (min-width: 750px) {
    .alkaline-grid {
      grid-template-columns: {% if section.settings.desktop_layout == 'image_left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
      align-items: center;
    }
  }

  @media (max-width: 749px) {
    .alkaline-grid {
      grid-template-columns: 1fr;
    }
    .alkaline-image-container {
      height: {{ section.settings.image_height | times: 0.8 }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="alkaline-grid">
      <!-- A部分：双图卡片 -->
      <div class="alkaline-dual-card {% if section.settings.desktop_layout == 'image_right' %}order-2{% endif %}">
        <div class="alkaline-image-container">
          {% if section.settings.custom_image_1 %}
            <img src="{{ section.settings.custom_image_1 | img_url: '1000x' }}"
                 alt="{{ section.settings.custom_image_1.alt | escape }}"
                 class="alkaline-primary-image"
                 loading="lazy"
                 width="1000"
                 height="{{ 1000 | divided_by: section.settings.custom_image_1.aspect_ratio | round }}">
          {% elsif product.featured_image %}
            <img src="{{ product.featured_image | img_url: '1000x' }}"
                 alt="{{ product.featured_image.alt | escape }}"
                 class="alkaline-primary-image"
                 loading="lazy"
                 width="1000"
                 height="{{ 1000 | divided_by: product.featured_image.aspect_ratio | round }}">
          {% else %}
            {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}

          {% if section.settings.enable_hover %}
            {% if section.settings.custom_image_2 %}
              <img src="{{ section.settings.custom_image_2 | img_url: '1000x' }}"
                   alt="{{ section.settings.custom_image_2.alt | escape }}"
                   class="alkaline-hover-image"
                   loading="lazy"
                   width="1000"
                   height="{{ 1000 | divided_by: section.settings.custom_image_2.aspect_ratio | round }}">
            {% elsif product.media.size >= 2 %}
              <img src="{{ product.media[1] | img_url: '1000x' }}"
                   alt="{{ product.media[1].alt | escape }}"
                   class="alkaline-hover-image"
                   loading="lazy"
                   width="1000"
                   height="{{ 1000 | divided_by: product.media[1].aspect_ratio | round }}">
            {% endif %}
          {% endif %}
        </div>
      </div>

      <!-- B部分：产品信息 -->
      <div class="product-info-wrapper">
        <div id="ProductInfo-{{ section.id }}" class="product__info-container">
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'title' -%}
                <h1 class="product__title" {{ block.shopify_attributes }}>
                  {{ product.title | escape }}
                </h1>
              {%- when 'price' -%}
                <div class="no-js-hidden" id="price-{{ section.id }}" {{ block.shopify_attributes }}>
                  {%- render 'price', product: product, use_variant: true, show_badges: true -%}
                </div>
              {%- when 'variant_picker' -%}
                {%- render 'product-variant-picker',
                  product: product,
                  block: block,
                  product_form_id: product_form_id
                -%}
              {%- when 'quantity_selector' -%}
                <div class="product-form__input product-form__quantity" {{ block.shopify_attributes }}>
                  <label class="form__label" for="Quantity-{{ section.id }}">
                    {{ 'products.product.quantity.label' | t }}
                  </label>
                  <quantity-input class="quantity">
                    <button class="quantity__button no-js-hidden" name="minus" type="button">
                      -
                    </button>
                    <input class="quantity__input"
                        type="number"
                        name="quantity"
                        id="Quantity-{{ section.id }}"
                        min="1"
                        value="1"
                        form="{{ product_form_id }}"
                      >
                    <button class="quantity__button no-js-hidden" name="plus" type="button">
                      +
                    </button>
                  </quantity-input>
                </div>
              {%- when 'buy_buttons' -%}
                {%- render 'buy-buttons',
                  block: block,
                  product: product,
                  product_form_id: product_form_id,
                  section_id: section.id
                -%}
              {%- when 'description' -%}
                <div class="product__description rte" {{ block.shopify_attributes }}>
                  {{ product.description }}
                </div>
              {%- when 'custom_text' -%}
                <div class="custom-text-block" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>